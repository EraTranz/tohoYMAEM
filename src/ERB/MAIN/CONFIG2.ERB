	PRINTFORMW 調教終了時に気力・体力の上昇が\@(FLAG:14 & 2) ? 起きない # 起きる\@ように設定しました
	FLAG:14 ^= 2
ELSEIF RESULT == 2
	PRINTFORMW ヤンデレもーどを\@(FLAG:14 & 4) ? 無効 # 有効\@にしました
	FLAG:14 ^= 4
ELSEIF RESULT == 3
	PRINTFORMW 一部コマンドの\@(FLAG:14 & 8) ? 効果を元のランダムなものに戻 # ランダム効果を自分で選択できるように\@しました
	FLAG:14 ^= 8
ELSEIF RESULT == 4
	PRINTFORMW 猫フェラパッチの機能を\@(FLAG:14 & 16) ? 無効 # 有効\@にしました
	FLAG:14 ^= 16
ELSEIF RESULT == 5
	PRINTFORMW ふたたまパッチの機能を\@(FLAG:14 & 32) ? 無効 # 有効\@にしました
	FLAG:14 ^= 32
ELSEIF RESULT == 6
	PRINTFORMW 調教メニューの登録機能を\@(FLAG:14 & 64) ? 無効 # 有効\@にしました
	FLAG:14 ^= 64
ELSEIF RESULT == 7
	PRINTFORMW ふたなりイベントを抑制し\@(FLAG:14 & 128) ? ません # ます\@
	FLAG:14 ^= 128
ELSEIF RESULT == 8
	PRINTFORMW 精飲絶頂機能を\@(FLAG:14 & 256) ? 無効 # 有効\@にしました
	FLAG:14 ^= 256
ELSEIF RESULT == 20 && FLAG:14 & 1
	PRINTFORMW Ｖ系調教フィルタを\@(FLAG:2 & 1) ? オフ # オン\@にしました。
	FLAG:2 ^= 1
ELSEIF RESULT == 21 && FLAG:14 & 1
	PRINTFORMW Ａ系調教フィルタを\@(FLAG:2 & 2) ? オフ # オン\@にしました。
	FLAG:2 ^= 2
ELSEIF RESULT == 22 && FLAG:14 & 1
	PRINTFORMW 異常調教フィルタを\@(FLAG:2 & 4) ? オフ # オン\@にしました。
	FLAG:2 ^= 4
ELSE
	CLEARLINE 1
	REUSELASTLINE 正しい値を入力してください
	GOTO INPUT_LOOP_1
ENDIF
DRAWLINE
PRINT 他に
GOTO INPUT_LOOP_0

