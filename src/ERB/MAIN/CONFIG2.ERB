	RETURN 0
ELSEIF RESULT == 98 && FLAG:14 < LOCAL
	PRINTW 調教モード拡張機能を全て使えるように設定しました
	FLAG:14 = LOCAL
	FLAG:2 |= 7
ELSEIF RESULT == 99 && FLAG:14
	PRINTW 調教モード拡張機能を全て使えないように設定しました
	FLAG:14 = 0
	FLAG:2 = 0
ELSEIF RESULT == 0
	PRINTFORMW 調教コマンドフィルタ機能を\@(FLAG:14 & 1) ? 無効 # 有効\@にしました
	SIF FLAG:14 & 1
		FLAG:2 = 0
	FLAG:14 ^= 1
