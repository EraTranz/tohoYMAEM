;-------------------------------------------------
PRINTFORML \@(FLAG:14 & 128) ? ○ # ×\@[ 7] ふたなりイベント抑制
;-------------------------------------------------
PRINTFORML \@(FLAG:14 & 256) ? ○ # ×\@[ 8] 精飲絶頂
;-------------------------------------------------
IF FLAG:14 & 1
	PRINTFORML \@(FLAG:2 & 1) ? ○ # ×\@[20] Ｖ系調教フィルタ
;-------------------------------------------------
	PRINTFORML \@(FLAG:2 & 2) ? ○ # ×\@[21] Ａ系調教フィルタ
;-------------------------------------------------
	PRINTFORML \@(FLAG:2 & 4) ? ○ # ×\@[22] 異常調教フィルタ
ENDIF
;-------------------------------------------------
