;=============================================================================
;画像設定
;=============================================================================
@CONFIGURATION_8
#LOCALSIZE 1
PRINTL 現在、画像設定は以下のようになっています。
$INPUT_LOOP_0
PRINTL 変更したい内容を選択してください
DRAWLINE
PRINTFORML  [ 0]\@(FLAG:画像設定 & 1) ? ┬ # %" "%- \@ 画像表示： \@(FLAG:画像設定 & 1) ? ○ # ×\@
IF FLAG:画像設定 & 1
	PRINTFORML  [ 1]├ 男性の表示： \@(FLAG:画像設定 & 2) ? ○ # ×\@
	PRINTFORML  [ 2]├ モブの表示： \@(FLAG:画像設定 & 4) ? ○ # ×\@
	PRINTFORML  [ 3]├ 固有キャラの表示： \@(FLAG:画像設定 & 8) ? ○ # ×\@
	PRINTFORML  [ 4]└ 可変画像の使用： \@(FLAG:画像設定 & 16) ? ○ # ×\@
	PRINTFORML  [10]\@FLAG:通常画面画像：表示 ? ┬ # %" "%- \@ 通常画面の画像表示: \@FLAG:通常画面画像：表示 ? ○ # ×\@
	IF FLAG:通常画面画像：表示
		PRINTFORML  [11]├ X座標: {FLAG:通常画面画像：X座標}
		PRINTFORML  [12]├ Y座標: {FLAG:通常画面画像：Y座標}
		PRINTFORML  [13]└ 画像サイズ(10の場合に1.0倍表示): {FLAG:通常画面画像：画像サイズ/10}.{FLAG:通常画面画像：画像サイズ%10}
	ENDIF
	PRINTFORML  [20]\@FLAG:調教画面画像：表示 ? ┬ # %" "%- \@ 調教/購入画面の画像表示: \@FLAG:調教画面画像：表示 ? ○ # ×\@
	IF FLAG:調教画面画像：表示
		PRINTFORML  [21]├ X座標: {FLAG:調教画面画像：X座標}
		PRINTFORML  [22]├ Y座標: {FLAG:調教画面画像：Y座標}
		PRINTFORML  [23]└ 画像サイズ(10の場合に1.0倍表示): {FLAG:調教画面画像：画像サイズ/10}.{FLAG:調教画面画像：画像サイズ%10}
	ENDIF
	PRINTFORML  [30]\@FLAG:能力画面画像：表示 ? ┬ # %" "%- \@ 能力画面の画像表示: \@FLAG:能力画面画像：表示 ? ○ # ×\@
	IF FLAG:能力画面画像：表示
		PRINTFORML  [31]├ X座標: {FLAG:能力画面画像：X座標}
		PRINTFORML  [32]├ Y座標: {FLAG:能力画面画像：Y座標}
		PRINTFORML  [33]└ 画像サイズ(10の場合に1.0倍表示): {FLAG:能力画面画像：画像サイズ/10}.{FLAG:能力画面画像：画像サイズ%10}
	ENDIF
ENDIF
PRINTL  [50] 全設定をデフォルトに戻す
PRINTL  [100] やめる
$INPUT_LOOP_1
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF RESULT == 0
	PRINTFORMW 「画像表示」を\@(FLAG:画像設定 & 1) ? 無効 # 有効\@にしました
	FLAG:画像設定 ^= 1 
ELSEIF RESULT == 1
	PRINTFORMW 「男性の表示」を\@(FLAG:画像設定 & 2) ? 無効 # 有効\@にしました
	FLAG:画像設定 ^= 2
ELSEIF RESULT == 2
	PRINTFORMW 「モブの表示」を\@(FLAG:画像設定 & 4) ? 無効 # 有効\@にしました
	FLAG:画像設定 ^= 4
ELSEIF RESULT == 3
	PRINTFORMW 「固有キャラの表示」を\@(FLAG:画像設定 & 8) ? 無効 # 有効\@にしました
	FLAG:画像設定 ^= 8
ELSEIF RESULT == 4
	PRINTFORMW 「可変画像の使用」を\@(FLAG:画像設定 & 16) ? 無効 # 有効\@にしました
	FLAG:画像設定 ^= 16
ELSEIF RESULT == 10
	PRINTFORMW 「通常画面画像」を\@FLAG:通常画面画像：表示 ? 無効 # 有効\@にしました
	FLAG:通常画面画像：表示 = !FLAG:通常画面画像：表示
ELSEIF RESULT == 11
	PRINTFORM 画像を表示するX座標を指定してください(0~5000) 
	PRINTBUTTON "[デフォルト(3000)]", 3000
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,0,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:通常画面画像：X座標 = RESULT
	ENDIF
ELSEIF RESULT == 12
	PRINTFORM 画像を表示するY座標を指定してください(-5000~5000) 
	PRINTBUTTON "[デフォルト(0)]", 0
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,-5000,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:通常画面画像：Y座標 = RESULT
	ENDIF
ELSEIF RESULT == 13
	PRINTFORM 画像サイズを指定してください(5~30) 
	PRINTBUTTON "[デフォルト(10)]", 10
	PRINTFORML
	PRINTFORM  (10を指定した場合、1.0倍表示)
	INPUT
	IF !INRANGE(RESULT,5,30)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:通常画面画像：画像サイズ = RESULT
	ENDIF
ELSEIF RESULT == 20
	PRINTFORMW 「調教/購入画面画像」を\@FLAG:調教画面画像：表示 ? 無効 # 有効\@にしました
	FLAG:調教画面画像：表示 = !FLAG:調教画面画像：表示
ELSEIF RESULT == 21
	PRINTFORM 画像を表示するX座標を指定してください(0~5000) 
	PRINTBUTTON "[デフォルト(3500)]", 3500
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,0,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:調教画面画像：X座標 = RESULT
	ENDIF
ELSEIF RESULT == 22
	PRINTFORM 画像を表示するY座標を指定してください(-5000~5000) 
	PRINTBUTTON "[デフォルト(-50)]", -50
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,-5000,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:調教画面画像：Y座標 = RESULT
	ENDIF
ELSEIF RESULT == 23
	PRINTFORM 画像サイズを指定してください(5~30) 
	PRINTBUTTON "[デフォルト(10)]", 10
	PRINTFORML
	PRINTFORM  (10を指定した場合、1.0倍表示)
	INPUT
	IF !INRANGE(RESULT,5,30)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:調教画面画像：画像サイズ = RESULT
	ENDIF
ELSEIF RESULT == 30
	PRINTFORMW 「能力画面画像」を\@FLAG:能力画面画像：表示 ? 無効 # 有効\@にしました
	FLAG:能力画面画像：表示 = !FLAG:能力画面画像：表示
ELSEIF RESULT == 31
	PRINTFORM 画像を表示するX座標を指定してください(0~5000) 
	PRINTBUTTON "[デフォルト(2000)]", 2000
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,0,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:能力画面画像：X座標 = RESULT
	ENDIF
ELSEIF RESULT == 32
	PRINTFORM 画像を表示するY座標を指定してください(-5000~5000) 
	PRINTBUTTON "[デフォルト(50)]", 50
	PRINTFORML
	INPUT
	IF !INRANGE(RESULT,-5000,5000)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:能力画面画像：Y座標 = RESULT
	ENDIF
ELSEIF RESULT == 33
	PRINTFORM 画像サイズを指定してください(5~30) 
	PRINTBUTTON "[デフォルト(10)]", 10
	PRINTFORML
	PRINTFORM  (10を指定した場合、1.0倍表示)
	INPUT
	IF !INRANGE(RESULT,5,30)
		PRINTFORMW 無効な数値です
	ELSEIF RESULT
		FLAG:能力画面画像：画像サイズ = RESULT
	ENDIF
ELSEIF RESULT == 50
	PRINTFORMW 全ての設定をデフォルトに戻しました
	CALL CONFIGURATION_8_CHANGE_DEFAULT
ELSE
	CLEARLINE 1
	REUSELASTLINE 正しい値を入力してください
	GOTO INPUT_LOOP_1
ENDIF
DRAWLINE
PRINT 他に
GOTO INPUT_LOOP_0

@CONFIGURATION_8_CHANGE_DEFAULT
	FLAG:画像設定 = 31
	FLAG:通常画面画像：表示		= 1
	FLAG:通常画面画像：X座標		= 3000
	FLAG:通常画面画像：Y座標		= -50
	FLAG:通常画面画像：画像サイズ	= 10
	FLAG:調教画面画像：表示		= 1
	FLAG:調教画面画像：X座標		= 3600
	FLAG:調教画面画像：Y座標		= -50
	FLAG:調教画面画像：画像サイズ	= 10
	FLAG:能力画面画像：表示		= 1
	FLAG:能力画面画像：X座標		= 100
	FLAG:能力画面画像：Y座標		= -50
	FLAG:能力画面画像：画像サイズ	= 10
RETURN 