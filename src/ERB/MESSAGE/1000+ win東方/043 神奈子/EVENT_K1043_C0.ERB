;==============================================================
;○○口上
;==============================================================
;========================================================
;コマンド口上前の共通関数
;特定の条件下でコマンド口上を表示させないようにする場合はRETURN 1
;1以外を返した場合はコマンド口上は表示される
;========================================================
@KOJO_1043_TRAIN_MESSAGE_S_BEFORE
;眠ってる場合は戻る
SIF EQUIP:睡眠薬
	RETURN 1
;時止め中は戻る
SIF TEQUIP:時間止め && SELECTCOM != 418
	RETURN 1
;口枷がある場合は戻る
IF TEQUIP:口装着器具 == 0
	CALL K1043_GAG
ELSE
	RETURN 1
ENDIF
;失神回復時は戻る
SIF TFLAG:898 == 1
	RETURN 1
;精神崩壊の場合は戻る
SIF TALENT:精神崩壊
	RETURN 1
