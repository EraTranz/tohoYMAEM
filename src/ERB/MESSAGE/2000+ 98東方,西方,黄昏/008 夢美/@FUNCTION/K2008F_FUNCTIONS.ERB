;================================================
;胸の大きさの名称を返す関数
;------------------------------------------------
;■引数
;ARG
;	0（省略）: CSV名
;	1: 口上システム側の名義
;================================================
@K2008FS_BSIZE(ARG = 0)
#FUNCTIONS
#DIMS _NAME
SELECTCASE ARG
	CASE 0
		SELECTCASE K2008F_BSIZE()
			CASE -2
				_NAME = 絶壁
			CASE -1
				_NAME = 貧乳
			CASE 0
				_NAME = 並乳
			CASE 1
				_NAME = 巨乳
			CASE 2
				_NAME = 爆乳
		ENDSELECT
	CASE 1
		SELECTCASE K2008F_BSIZE()
			CASE -2
				_NAME = スリムすぎる胸
			CASE -1
				_NAME = ささやかな膨らみ
			CASE 0
				_NAME = 整った胸
			CASE 1
				_NAME = たわわに実った胸
			CASE 2
				_NAME = 自己主張の激しすぎる胸
		ENDSELECT
	CASEELSE
		THROW 【K2008エラー】未登録の引数 {ARG} が使用されました
ENDSELECT

RETURNF _NAME

