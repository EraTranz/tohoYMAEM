;ARG＝調教対象、ARG:1＝調教者、ARG:2＝コマンド
@COM_ABLE_BATTLE(ARG, ARG:1, ARG:2)
#FUNCTION

;脱衣なし　
;！愛撫、胸愛撫、キスする、何もしない、電気按摩、手淫、フェラチオ、足舐め強制、媚薬、利尿剤、賢者の血、排卵誘発剤、産卵促進剤、陰核成長剤、興奮剤、感覚増幅薬、お香を焚く、スパンキング、鞭、縄、
;！アイマスク、ボールギャグ、罵倒、鼻フック、強制開口器、イラマチオ、鼻クリップ、スタンガン、腹パン、杭、ナイフ、鉈、ビンタを張る、アイアンメイデン、水を飲ませる、ザーメンキス、読心、思姦、時間停止、狂気の目、
;！かりちゅまがーど、薀蓄語り、説教を受ける、傘を愛撫する、フィーバー！、ピッチャー二つ、超凝視
SIF EQUIP:脱衣 == 0 && INRANGE(ARG:2, 0, 699) && !GROUPMATCH(ARG:2, 0, 3, 6, 9, 11, 40, 41, 46, 61, 62, 65, 66, 68, 69, 70, 72, 79, 220, 221, 224, 225, 226, 227, 228, 229, 230, 237, 238, 241, 243, 244, 245, 251, 252, 253, 293, 415, 416, 418, 419, 425, 445, 446, 447, 449, 450, 452)
	RETURNF 0

;距離　0～7
;裸エプロン～毛を抜かせる
SIF INRANGE(ARG:2, 90, 114)
	RETURNF 0
;お風呂場プレイ～札束風呂
SIF INRANGE(ARG:2, 350, 374)
	RETURNF 0

;！奉仕する、勝手にやる
IF TEQUIP:ARG:戦闘状態 != 10 && !TFLAG:699
	;距離　0～7
	;手淫～ナイズリ
	SIF INRANGE(ARG:2, 40, 56)
		RETURNF 0
	;罵ってもらう～血を吸われる
	SIF INRANGE(ARG:2, 270, 274)
		RETURNF 0
	;自慰、騎乗位、逆レイプ、騎乗位アナル、逆アナルレイプ、ローター自慰、電マ自慰、飲尿する、胸自慰、縦パイズリ、パイズリフェラ、乳合わせ、髪を染める、髪型を弄る、騎乗乳房自慰、相互自慰
	SIF GROUPMATCH(ARG:2, 7, 24, 25, 34, 35, 124, 125, 145, 205, 208, 209, 210, 395, 396, 613, 628)
		RETURNF 0
ENDIF

;Ｖ挿入防御
IF TEQUIP:ARG:戦闘状態 == 11
	;距離　0～7
	;クスコ～ヴァギナバルーン
	SIF INRANGE(ARG:2, 150, 157)
		RETURNF 0
	;バイブ、正常位～背面立位、ヴァギナ注射、フィストファック、両穴フィスト、ヴァギナダイビング、三角木馬、二人のＶをフィスト、ペニバン挿入、膣内洗浄、犬に犯させる、豚に犯させる、馬に犯させる、焼芋責め、御所車、フォーオブアカインド、角挿入、ヴァギナ要石、両穴要石、半霊を挿入(前)、触手挿入、触手メイデン、触手Ｇスポ責め、触手子宮責め、触手ヴァギナ拡張、触手両穴拡張、触手産卵、触手愛液採集、触手膣内洗浄、触手全穴洗浄、触手排卵誘発、触手避妊膜塗布、触手幽霊膣鏡、乱れ牡丹、後背位胸愛撫、対面胸愛撫、後背位手淫、背面座位胸愛撫、蜘蛛脚六点責め、拘束∇、性感槍ぐんぐにる
	SIF GROUPMATCH(ARG:2, 12, 20, 21, 22, 23, 24, 27, 28, 81, 231, 233, 234, 242, 312, 326, 339, 381, 383, 386, 403, 430, 431, 435, 437, 439, 441, 501, 509, 520, 521, 530, 532, 533, 535, 541, 546, 561, 562, 582, 612, 616, 617, 630, 632, 654, 658, 660)
		RETURNF 0
ENDIF

LOCAL = 距離:ARG - 距離:(ARG:1)
SIF LOCAL < 0
	LOCAL *= -1

IF ASSI > 0 && (ARG:1 == MASTER || ARG:1 == ASSI)
	LOCAL:1 = 距離:ASSI - 距離:MASTER
	SIF LOCAL:1 < 0
		LOCAL:1 *= -1
	
	;距離　0～1　助手避妊薬、コンドーム精飲(助)、助手とキスする
	SIF LOCAL:1 <= 1 && GROUPMATCH(ARG:2, 71, 292, 309)
		RETURNF 1
		
	;距離　0　助手を犯す、助手のＡを犯す
	SIF LOCAL:1 == 0 && GROUPMATCH(ARG:2, 26, 36)
		RETURNF 1
	
	;三人の間の距離　0～1　乳合わせ見せつけ、二人フェラチオ、二本フェラチオ、二人でパイズリ、二人で素股、二人の尻を叩く、尻を二人で叩く、二人のＶをフィスト、二人のＡをフィスト、二人でフェラする、二人で首筋耳裏責め
	SIF LOCAL <= 1 && LOCAL:1 <= 1 && GROUPMATCH(ARG:2, 211, 303, 304, 305, 306, 310, 311, 312, 313, 331, 337, 338)
		RETURNF 1
	
	;三人の間の距離　0　助手を犯させる、助手のＡを犯させる、二人に犯させる、サンドイッチ
	SIF LOCAL == 0 && LOCAL:1 <= 1 && GROUPMATCH(ARG:2, 307, 308, 338, 629)
		RETURNF 1
ELSE
	LOCAL:1 = 7
ENDIF

;距離　0～7
;自慰、何もしない、お香を焚く、自慰見せつけ、二人自慰見せつけ、秘貝開帳見せつけ、二人秘貝見せつけ、焦らしプレイ、射精止め、罵倒、コンドーム、
;読心、思姦、時間停止、狂気の目、かりちゅまがーど、幽明の苦輪、半霊再構成、薀蓄語り、説教を受ける、フィーバー！、超凝視
SIF GROUPMATCH(ARG:2, 7, 9, 79, 115, 116, 117, 118, 120, 121, 227, 290, 415, 416, 418, 419, 425, 443, 444, 445, 446, 449, 452)
	RETURNF 1

;距離　0～2　人形愛撫、操りの糸、鈴蘭の毒
SIF LOCAL <= 2 && GROUPMATCH(ARG:2, 411, 412, 420)
	RETURNF 1

;距離　1　！正常位～背面立位アナル、尿道挿入、アイアンメイデン、貝あわせ、正常位させる、後背位させる、騎乗位する、Ａ正常位させる、Ａ後背位させる、Ａ騎乗位する、犬に犯させる～馬にＡ犯させる、媚薬漬け、御所車、フォーオブアカインド、半霊を犯す、半霊を挿入(前/後)、乱れ牡丹、後背位胸愛撫、対面胸愛撫、後背位手淫、背面座位胸愛撫
SIF LOCAL == 1 && !GROUPMATCH(ARG:2, 20, 21, 22, 23, 24, 25, 27, 28, 30, 31, 32, 33, 34, 35, 37, 38, 146, 252, 301, 323, 324, 325, 332, 333, 334, 422, 430, 431, 440, 441, 442, 612, 616, 617, 630, 632) && !INRANGE(ARG:2, 381, 391)
	RETURNF 1

;距離　0　！助手プレイ
SIF LOCAL == 0 && !GROUPMATCH(ARG:2, 26, 36, 71, 292, 307, 308, 309, 211, 303, 304, 305, 306, 310, 311, 312, 313, 331, 337, 338)
	RETURNF 1

RETURNF 0