;=============================================================================
;マゾっ気
;=============================================================================
@ABLUP21
DRAWLINE
SIF ABL:マゾっ気 >= 5
	JUMP ABLUP_MAX

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]、[マゾ]なら無視できる）
SIF COST21(5)
	PRINTFORM %EXPNAME:50%{COST21(5)}以上、かつ
;欲望がマゾっ気＋１レベルでないといけない
PRINTFORML %ABLNAME:11%{ABL:マゾっ気 + 1}LV以上、かつ

PRINTFORM [0] - %PALAMNAME:16%の珠×{COST21(0)}、%PALAMNAME:14%の珠×{COST21(1)}
SIF COST21(4) > 0
	PRINTFORM 、%EXPNAME:30%{COST21(4)}以上
PRINTFORM 、%EXPNAME:2%1以上……
CALL SHOW_ISABLUP_COMMON, CAN21(0)

IF COST21(2) > 0
	PRINTFORM [1] - %PALAMNAME:16%の珠×{COST21(2)}、%PALAMNAME:13%の珠×{COST21(3)}
	SIF COST21(4) > 0
		PRINTFORM 、%EXPNAME:30%{COST21(4)}以上
	PRINT ……
	CALL SHOW_ISABLUP_COMMON, CAN21(1)
ENDIF

PRINTL [100] - やめる
$INPUT_LOOP
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF (RESULT == 0 || RESULT == 1) && CAN21(RESULT) != 0
	CLEARLINE 1
	REUSELASTLINE 条件を満たしていません。
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	JUEL:苦痛 -= COST21(0)
	JUEL:屈服 -= COST21(1)
ELSEIF RESULT == 1
	JUEL:苦痛 -= COST21(2)
	JUEL:欲情 -= COST21(3)
ELSE
	CLEARLINE 1
	REUSELASTLINE
	GOTO INPUT_LOOP
ENDIF

ABL:マゾっ気 += 1
PRINTFORMW %ABLNAME:21%のレベルが{ABL:マゾっ気}になりました。

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@ISABLUP21
SIF ABL:マゾっ気 >= 5
	RETURN 0

CALLF CALC_COST21, "CALC"

;条件別にＯＫかダメかを記録する
RETURN CAN_ABLUP21("CHECK")

@COST21(ARG)
#FUNCTION
RETURNF CALC_COST21("GET", ARG)

@CALC_COST21(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:マゾっ気 == 0
	LOCAL:0 = 100
	LOCAL:1 = 100
	LOCAL:2 = 100
	LOCAL:3 = 100
	LOCAL:4 = 0
ELSEIF ABL:マゾっ気 == 1
	LOCAL:0 = 500
	LOCAL:2 = 500
	LOCAL:1 = 300
	LOCAL:3 = 500
	LOCAL:4 = 1
ELSEIF ABL:マゾっ気 == 2
	LOCAL:0 = 1500
	LOCAL:1 = 1000
	LOCAL:2 = 1200
	LOCAL:3 = 1000
	LOCAL:4 = 10
ELSEIF ABL:マゾっ気 == 3
	LOCAL:0 = 3000
	LOCAL:1 = 6000
	LOCAL:2 = 0
	LOCAL:3 = 0
	LOCAL:4 = 50
	;一線越えない
	IF TALENT:一線越えない
		LOCAL:0 *= 2
		LOCAL:1 *= 2
		LOCAL:4 *= 2
	ENDIF
ELSEIF ABL:マゾっ気 == 4
	LOCAL:0 = 5000
	LOCAL:1 = 12000
	LOCAL:2 = 0
	LOCAL:3 = 0
	LOCAL:4 = 100
	;一線越えない
	IF TALENT:一線越えない
		LOCAL:0 *= 3
		LOCAL:1 *= 3
		LOCAL:4 *= 3
	ENDIF
ENDIF

;サドであればあげ難い
IF ABL:サドっ気 >= 5
	TIMES LOCAL:0 , 5.00
	TIMES LOCAL:1 , 5.00
	TIMES LOCAL:2 , 5.00
	TIMES LOCAL:3 , 5.00
	TIMES LOCAL:4 , 5.00
ELSEIF ABL:サドっ気 == 4
	TIMES LOCAL:0 , 4.00
	TIMES LOCAL:1 , 4.00
	TIMES LOCAL:2 , 4.00
	TIMES LOCAL:3 , 4.00
	TIMES LOCAL:4 , 4.00
ELSEIF ABL:サドっ気 == 3
	TIMES LOCAL:0 , 3.00
	TIMES LOCAL:1 , 3.00
	TIMES LOCAL:2 , 3.00
	TIMES LOCAL:3 , 3.00
	TIMES LOCAL:4 , 3.00
ELSEIF ABL:サドっ気 == 2
	TIMES LOCAL:0 , 2.00
	TIMES LOCAL:1 , 2.00
	TIMES LOCAL:2 , 2.00
	TIMES LOCAL:3 , 2.00
	TIMES LOCAL:4 , 2.00
ELSEIF ABL:サドっ気 == 1
	TIMES LOCAL:0 , 1.50
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.50
	TIMES LOCAL:3 , 1.50
	TIMES LOCAL:4 , 1.50
ENDIF

;解放
IF TALENT:解放
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
ENDIF
;倒錯的
IF TALENT:倒錯的
	TIMES LOCAL:0 , 0.75
	TIMES LOCAL:1 , 0.75
	TIMES LOCAL:2 , 0.75
	TIMES LOCAL:3 , 0.75
	TIMES LOCAL:4 , 0.75
ENDIF
;マゾ
IF TALENT:マゾ
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
ENDIF
;淫乱
IF TALENT:淫乱
	TIMES LOCAL:0 , 0.80
	TIMES LOCAL:1 , 0.80
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 0.80
	TIMES LOCAL:4 , 0.80
ENDIF

;異常経験数により軽減
IF !MARK:恐怖刻印 && !MARK:反発刻印
	FOR PC_VAR1, 0, 5
		LOCAL:PC_VAR1 = LOCAL:PC_VAR1 * (21 - LIMIT(EXP:異常経験/3, 1, 11)) / 20
	NEXT
ENDIF

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]、[マゾ]なら無視できる）
SIF ABL:マゾっ気 >= 3 && TALENT:解放 == 0 && TALENT:マゾ == 0
	LOCAL:5 = ABL:マゾっ気 - 2

RETURNF 0

@CAN21(ARG)
#FUNCTION
RETURNF CAN_ABLUP21("GET", ARG)

@CAN_ABLUP21(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
VARSET LOCAL, 0
;欲望がマゾっ気＋１レベルでないといけない
IF ABL:欲望 < ABL:マゾっ気 + 1
	;欲望が不足
	LOCAL:0 |= 4
	LOCAL:1 |= 4
ENDIF

;異常経験が必要な場合
IF EXP:異常経験 < COST21(5)
	LOCAL:0 |= 2
	LOCAL:1 |= 2
ENDIF

;苦痛快楽経験が必要な場合
IF EXP:苦痛快楽経験 < COST21(4)
	LOCAL:0 |= 2
	LOCAL:1 |= 2
ENDIF

;苦痛の珠で上げる
SIF JUEL:苦痛 < COST21(0)
	LOCAL:0 |= 1
;屈服の珠で上げる
SIF JUEL:屈服 < COST21(1)
	LOCAL:0 |= 1
;この場合絶頂経験が1以上必要
SIF EXP:絶頂経験 < 1
	LOCAL:0 |= 2

IF COST21(2) > 0
	;苦痛の珠で上げる
	SIF JUEL:苦痛 < COST21(2)
		LOCAL:1 |= 1
	;欲情の珠で上げる
	SIF JUEL:欲情 < COST21(3)
		LOCAL:1 |= 1
ELSE
	LOCAL:1 = 256
ENDIF

RETURNF (LOCAL:0 == 0 || LOCAL:1 == 0)
