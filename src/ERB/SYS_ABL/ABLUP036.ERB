;=============================================================================
;排泄中毒
;=============================================================================
@ABLUP36
SIF (FLAG:15 & 4) == 0
	RETURN 0
DRAWLINE
SIF ABL:排泄中毒 >= 5
	JUMP ABLUP_MAX

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要(素質：[Ａ敏感][中毒しやすい][淫尻]なら無視できる)
SIF COST36(6)
	PRINTFORM %EXPNAME:50%{COST36(6)}以上、かつ
;Ａ経験及び調教自慰経験が必要(表示は排泄中毒が0の時のみ)
SIF ABL:排泄中毒 == 0
	PRINTFORM %EXPNAME:1%50以上、%EXPNAME:11%20以上、かつ
;露出癖が必要
PRINTFORML %ABLNAME:14%{ABL:排泄中毒 + 1}LV以上、かつ

PRINTFORM [0] - %PALAMNAME:2%の珠×{COST36(0)}、%PALAMNAME:13%の珠×{COST36(1)}、%PALAMNAME:14%の珠×{COST36(2)}、%PALAMNAME:15%の珠×{COST36(3)}、%EXPNAME:7%{COST36(4)}以上、%EXPNAME:43%{COST36(5)}以上……
CALL SHOW_ISABLUP_COMMON, CAN36(0)

PRINTL [100] - やめる
$INPUT_LOOP
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF RESULT == 0 && CAN36(0) != 0
	CLEARLINE 1
	REUSELASTLINE 条件を満たしていません。
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	JUEL:快Ａ -= COST36(0)
	JUEL:欲情 -= COST36(1)
	JUEL:屈服 -= COST36(2)
	JUEL:恥情 -= COST36(3)
ELSE
	CLEARLINE 1
	REUSELASTLINE
	GOTO INPUT_LOOP
ENDIF

ABL:排泄中毒 += 1
PRINTFORMW %ABLNAME:36%のレベルが{ABL:排泄中毒}になりました。

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@ISABLUP36
SIF (FLAG:15 & 4) == 0
	RETURN 0
SIF ABL:排泄中毒 >= 5
	RETURN 0

CALLF CALC_COST36, "CALC"

;条件別にＯＫかダメかを記録する
RETURN CAN_ABLUP36("CHECK")

@COST36(ARG)
#FUNCTION
RETURNF CALC_COST36("GET", ARG)

@CALC_COST36(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:排泄中毒 == 0
	LOCAL:0 = 6000
	LOCAL:1 = 2500
	LOCAL:2 = 1000
	LOCAL:3 = 3000
	LOCAL:4 = 2
	LOCAL:5 = 10
ELSEIF ABL:排泄中毒 == 1
	LOCAL:0 = 14000
	LOCAL:1 = 5000
	LOCAL:2 = 2500
	LOCAL:3 = 7000
	LOCAL:4 = 10
	LOCAL:5 = 25
ELSEIF ABL:排泄中毒 == 2
	LOCAL:0 = 27000
	LOCAL:1 = 9000
	LOCAL:2 = 4800
	LOCAL:3 = 12000
	LOCAL:4 = 30
	LOCAL:5 = 80
ELSEIF ABL:排泄中毒 == 3
	LOCAL:0 = 65000
	LOCAL:1 = 17000
	LOCAL:2 = 10000
	LOCAL:3 = 20000
	LOCAL:4 = 75
	LOCAL:5 = 150
	;一線越えない
	IF TALENT:一線越えない
		TIMES LOCAL:0 , 2.00
		TIMES LOCAL:1 , 2.00
		TIMES LOCAL:2 , 2.00
		TIMES LOCAL:3 , 2.00
		TIMES LOCAL:4 , 2.00
		TIMES LOCAL:5 , 2.00
	ENDIF
ELSEIF ABL:排泄中毒 == 4
	LOCAL:0 = 130000
	LOCAL:1 = 30000
	LOCAL:2 = 25000
	LOCAL:3 = 50000
	LOCAL:4 = 180
	LOCAL:5 = 300
	;一線越えない
	IF TALENT:一線越えない
		TIMES LOCAL:0 , 3.00
		TIMES LOCAL:1 , 3.00
		TIMES LOCAL:2 , 3.00
		TIMES LOCAL:3 , 3.00
		TIMES LOCAL:4 , 3.00
		TIMES LOCAL:5 , 3.00
	ENDIF
ENDIF

;倒錯的
IF TALENT:倒錯的
	TIMES LOCAL:0 , 0.75
	TIMES LOCAL:1 , 0.75
	TIMES LOCAL:2 , 0.75
	TIMES LOCAL:3 , 0.75
	TIMES LOCAL:4 , 0.75
	TIMES LOCAL:5 , 0.75
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
	TIMES LOCAL:5 , 0.50
;中毒しにくい
ELSEIF TALENT:中毒しにくい
	TIMES LOCAL:0 , 1.50
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.50
	TIMES LOCAL:3 , 1.50
	TIMES LOCAL:4 , 1.50
	TIMES LOCAL:5 , 1.50
ENDIF
;[中毒扇動]有効
IF TFLAG:995 == 1
	TIMES LOCAL:0 , 0.80
	TIMES LOCAL:1 , 0.80
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 0.80
	TIMES LOCAL:4 , 0.80
	TIMES LOCAL:5 , 0.80
ENDIF
;淫尻
IF TALENT:淫尻
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
	TIMES LOCAL:5 , 0.50
ENDIF
;Ａ敏感
IF TALENT:Ａ敏感
	TIMES LOCAL:0 , 0.80
	TIMES LOCAL:5 , 0.80
;Ａ鈍感
ELSEIF TALENT:Ａ鈍感
	TIMES LOCAL:0 , 1.20
	TIMES LOCAL:5 , 1.20
ENDIF

;異常経験数により軽減
IF !MARK:恐怖刻印 && !MARK:反発刻印
	FOR PC_VAR1, 0, 6
		LOCAL:PC_VAR1 = LOCAL:PC_VAR1 * (21 - LIMIT(EXP:異常経験/3, 1, 11)) / 20
	NEXT
ENDIF

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要(素質：[Ａ敏感][中毒しやすい][淫尻]なら無視できる)
SIF ABL:排泄中毒 >= 2 && TALENT:中毒しやすい == 0 && TALENT:Ｃ敏感 == 0 && TALENT:淫尻 == 0
	LOCAL:6 = ABL:排泄中毒 * (ABL:排泄中毒 - 1)

RETURNF 0

@CAN36(ARG)
#FUNCTION
RETURNF CAN_ABLUP36("GET", ARG)

@CAN_ABLUP36(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
VARSET LOCAL, 0
;異常経験が必要な場合
SIF EXP:異常経験 < COST36(6)
	LOCAL:0 |= 2

;露出癖が必要
SIF ABL:露出癖 < ABL:排泄中毒 + 1
	LOCAL:0 |= 4

;快Ａの珠で上げる
SIF JUEL:快Ａ < COST36(0)
	LOCAL:0 |= 1
;欲情の珠で上げる
SIF JUEL:欲情 < COST36(1)
	LOCAL:0 |= 1
;屈服の珠で上げる
SIF JUEL:屈服 < COST36(2)
	LOCAL:0 |= 1
;恥情の珠で上げる
SIF JUEL:恥情 < COST36(3)
	LOCAL:0 |= 1

;調教排泄経験が必要
SIF EXP:調教排泄経験 < COST36(4)
	LOCAL:0 |= 2
;Ａ快楽経験が必要
SIF EXP:Ａ快楽経験 < COST36(5)
	LOCAL:0 |= 2

IF ABL:排泄中毒 == 0
	;Ａ経験が必要
	SIF EXP:Ａ経験 < 50
		LOCAL:0 |= 2
	;調教自慰経験が必要
	SIF EXP:調教自慰経験 < 20
		LOCAL:0 |= 2
ENDIF

RETURNF (LOCAL:0 == 0)
