;=============================================================================
;獣姦中毒
;=============================================================================
@ABLUP38
DRAWLINE
SIF ABL:獣姦中毒 >= 5
	JUMP ABLUP_MAX

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[中毒しやすい][淫乱]なら無視できる）
SIF COST38(6)
	PRINTFORM %EXPNAME:50%{COST38(6)}以上、かつ
;Ｖ感覚と欲望が必要
PRINTFORML %ABLNAME:1%{ABL:獣姦中毒 + 1}LV以上、かつ%ABLNAME:11%{ABL:獣姦中毒 + 1}LV以上、かつ

PRINTFORM [0] - %PALAMNAME:1%の珠×{COST38(0)}、%PALAMNAME:13%の珠×{COST38(2)}、%PALAMNAME:14%の珠×{COST38(2)}、%EXPNAME:56%{COST38(5)}以上……
CALL SHOW_ISABLUP_COMMON, CAN38(0)

PRINTFORM [1] - %PALAMNAME:1%の珠×{COST38(0)}、%PALAMNAME:13%の珠×{COST38(2)}、%PALAMNAME:12%の珠×{COST38(3)}、%EXPNAME:56%{COST38(5)}以上……
CALL SHOW_ISABLUP_COMMON, CAN38(1)

;以下快Ａの珠対応版
PRINTL または、

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[中毒しやすい][淫乱]なら無視できる）
SIF COST38(6)
	PRINTFORM %EXPNAME:50%{COST38(6)}以上、かつ
;Ａ感覚と欲望が必要(Ｖ感覚よりは厳しめに、尻穴狂いがあればＶ感覚と同等)
PRINTFORML %ABLNAME:2%{COST38(7)}LV以上、かつ%ABLNAME:11%{ABL:獣姦中毒 + 1}LV以上、かつ

PRINTFORM [2] - %PALAMNAME:2%の珠×{COST38(1)}、%PALAMNAME:13%の珠×{COST38(2)}、%PALAMNAME:14%の珠×{COST38(2)}、%EXPNAME:56%{COST38(5)}以上……
CALL SHOW_ISABLUP_COMMON, CAN38(2)

PRINTFORM [3] - %PALAMNAME:2%の珠×{COST38(1)}、%PALAMNAME:13%の珠×{COST38(2)}、%PALAMNAME:12%の珠×{COST38(3)}、%EXPNAME:56%{COST38(5)}以上……
CALL SHOW_ISABLUP_COMMON, CAN38(3)

PRINTL [100] - やめる
$INPUT_LOOP
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF (RESULT >= 0 && RESULT <= 3) && CAN38(RESULT) != 0
	CLEARLINE 1
	REUSELASTLINE 条件を満たしていません。
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	JUEL:快Ｖ -= COST38(0)
	JUEL:欲情 -= COST38(2)
	JUEL:屈服 -= COST38(2)
ELSEIF RESULT == 1
	JUEL:快Ｖ -= COST38(0)
	JUEL:欲情 -= COST38(2)
	JUEL:恭順 -= COST38(3)
ELSEIF RESULT == 2
	JUEL:快Ａ -= COST38(1)
	JUEL:欲情 -= COST38(2)
	JUEL:屈服 -= COST38(2)
ELSEIF RESULT == 3
	JUEL:快Ａ -= COST38(1)
	JUEL:欲情 -= COST38(2)
	JUEL:恭順 -= COST38(3)
ELSE
	CLEARLINE 1
	REUSELASTLINE
	GOTO INPUT_LOOP
ENDIF

ABL:獣姦中毒 += 1
PRINTFORMW %ABLNAME:38%のレベルが{ABL:獣姦中毒}になりました。

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@ISABLUP38
SIF ABL:獣姦中毒 >= 5
	RETURN 0

CALLF CALC_COST38, "CALC"

;条件別にＯＫかダメかを記録する
RETURN CAN_ABLUP38("CHECK")

@COST38(ARG)
#FUNCTION
RETURNF CALC_COST38("GET", ARG)

@CALC_COST38(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:獣姦中毒 == 0
	LOCAL:0 = 10000
	LOCAL:1 = 10000
	LOCAL:2 = 3000
	LOCAL:3 = 1000
	LOCAL:4 = 100
	LOCAL:5 = 20
ELSEIF ABL:獣姦中毒 == 1
	LOCAL:0 = 25000
	LOCAL:1 = 25000
	LOCAL:2 = 6000
	LOCAL:3 = 3000
	LOCAL:4 = 250
	LOCAL:5 = 40
ELSEIF ABL:獣姦中毒 == 2
	LOCAL:0 = 50000
	LOCAL:1 = 50000
	LOCAL:2 = 12000
	LOCAL:3 = 6000
	LOCAL:4 = 500
	LOCAL:5 = 60
ELSEIF ABL:獣姦中毒 == 3
	LOCAL:0 = 100000
	LOCAL:1 = 100000
	LOCAL:2 = 20000
	LOCAL:3 = 15000
	LOCAL:4 = 1000
	LOCAL:5 = 100
	;一線越えない
	IF TALENT:一線越えない
		TIMES LOCAL:0 , 2.00
		TIMES LOCAL:1 , 2.00
		TIMES LOCAL:2 , 2.00
		TIMES LOCAL:3 , 2.00
		TIMES LOCAL:4 , 2.00
		TIMES LOCAL:5 , 2.00
	ENDIF
ELSEIF ABL:獣姦中毒 == 4
	LOCAL:0 = 300000
	LOCAL:1 = 300000
	LOCAL:2 = 40000
	LOCAL:3 = 40000
	LOCAL:4 = 2000
	LOCAL:5 = 160
	;一線越えない
	IF TALENT:一線越えない
		TIMES LOCAL:0 , 3.00
		TIMES LOCAL:1 , 3.00
		TIMES LOCAL:2 , 3.00
		TIMES LOCAL:3 , 3.00
		TIMES LOCAL:4 , 3.00
		TIMES LOCAL:5 , 3.00
	ENDIF
ENDIF

;倒錯的
IF TALENT:倒錯的
	TIMES LOCAL:0 , 0.75
	TIMES LOCAL:1 , 0.75
	TIMES LOCAL:2 , 0.75
	TIMES LOCAL:3 , 0.75
	TIMES LOCAL:4 , 0.75
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
	TIMES LOCAL:5 , 0.50
;中毒しにくい
ELSEIF TALENT:中毒しにくい
	TIMES LOCAL:0 , 1.50
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.50
	TIMES LOCAL:3 , 1.50
	TIMES LOCAL:4 , 1.50
	TIMES LOCAL:5 , 1.50
ENDIF
;[中毒扇動]有効
IF TFLAG:995 == 1
	TIMES LOCAL:0 , 0.80
	TIMES LOCAL:1 , 0.80
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 0.80
	TIMES LOCAL:4 , 0.80
	TIMES LOCAL:5 , 0.80
ENDIF
;淫乱
IF TALENT:淫乱
	TIMES LOCAL:0 , 0.50
	TIMES LOCAL:1 , 0.50
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 0.50
	TIMES LOCAL:4 , 0.50
ENDIF
;淫壷・淫尻
SIF TALENT:淫壷
	TIMES LOCAL:0 , 0.50
SIF TALENT:淫尻
	TIMES LOCAL:1 , 0.50

;異常経験数により軽減
IF !MARK:恐怖刻印 && !MARK:反発刻印
	FOR PC_VAR1, 0, 6
		LOCAL:PC_VAR1 = LOCAL:PC_VAR1 * (21 - LIMIT(EXP:異常経験/3, 1, 11)) / 20
	NEXT
ENDIF

;ＬＶ２から３、ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[中毒しやすい][淫乱]なら無視できる）
SIF ABL:獣姦中毒 >= 2 && TALENT:中毒しやすい == 0 && TALENT:淫乱 == 0
	LOCAL:6 = ABL:獣姦中毒 - 1

;Ａ感覚
LOCAL:7 = ABL:獣姦中毒 + 2 - TALENT:淫乱 - ((ABL:獣姦中毒 + 2 - TALENT:淫尻) / 6)

RETURNF 0

@CAN38(ARG)
#FUNCTION
RETURNF CAN_ABLUP38("GET", ARG)

@CAN_ABLUP38(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
	RETURNF LOCAL:ARG
VARSET LOCAL, 0
;異常経験が必要な場合
IF EXP:異常経験 < COST38(6)
	LOCAL:0 |= 2
	LOCAL:1 |= 2
	LOCAL:2 |= 2
	LOCAL:3 |= 2
ENDIF

;Ｖ感覚が必要
IF ABL:Ｖ感覚 < ABL:獣姦中毒 + 1
	LOCAL:0 |= 4
	LOCAL:1 |= 4
ENDIF
;Ａ感覚が必要
IF ABL:Ａ感覚 < COST38(7)
	LOCAL:2 |= 4
	LOCAL:3 |= 4
ENDIF
;欲望が必要
IF ABL:欲望 < ABL:獣姦中毒 + 1
	LOCAL:0 |= 4
	LOCAL:1 |= 4
	LOCAL:2 |= 4
	LOCAL:3 |= 4
ENDIF

;快Ｖの珠で上げる
IF JUEL:快Ｖ < COST38(0)
	LOCAL:0 |= 1
	LOCAL:1 |= 1
ENDIF
;快Ａの珠で上げる
IF JUEL:快Ａ < COST38(1)
	LOCAL:2 |= 1
	LOCAL:3 |= 1
ENDIF
;欲情の珠で上げる
IF JUEL:欲情 < COST38(2)
	LOCAL:0 |= 1
	LOCAL:1 |= 1
	LOCAL:2 |= 1
	LOCAL:3 |= 1
ENDIF
;屈服の珠で上げる
IF JUEL:屈服 < COST38(2)
	LOCAL:0 |= 1
	LOCAL:2 |= 1
ENDIF
;恭順の珠で上げる
IF JUEL:恭順 < COST38(3)
	LOCAL:1 |= 1
	LOCAL:3 |= 1
ENDIF
;動物性愛経験が必要
IF EXP:動物性愛経験 < COST38(5)
	LOCAL:0 |= 2
	LOCAL:1 |= 2
	LOCAL:2 |= 2
	LOCAL:3 |= 2
ENDIF

RETURNF (LOCAL:0 == 0 || LOCAL:1 == 0 || LOCAL:2 == 0 || LOCAL:3 == 0)
