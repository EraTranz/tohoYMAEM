ENDIF

;ABL:従順をみる
IF ABL:従順 == 0
	TIMES LOCAL , 0.80
ELSEIF ABL:従順 == 1
	TIMES LOCAL , 0.90
ELSEIF ABL:従順 == 2
	TIMES LOCAL , 1.00
ELSEIF ABL:従順 == 3
	TIMES LOCAL , 1.10
ELSEIF ABL:従順 == 4
	TIMES LOCAL , 1.20
ELSE
	TIMES LOCAL , 1.30
ENDIF

;貞操観念
IF TALENT:貞操観念
	;処女はありえない
	TIMES LOCAL:2, 3.00
ENDIF
;小柄体型
SIF TALENT:小柄体型
	TIMES LOCAL:1 , 2.00

SOURCE:快Ｖ += LOCAL
SOURCE:痛み += LOCAL:1
SOURCE:屈従 += LOCAL:2

;自慰実行時は経験＋1
IF CHECK_COM_MASTURBATION(SELECTCOM)
	TCVAR:Ｖ経験 += 3
ELSE
	TCVAR:Ｖ経験 += 2
ENDIF

;触手経験フラグ
SIF TEQUIP:触手調教
	TFLAG:90 += 1
RETURN 1

