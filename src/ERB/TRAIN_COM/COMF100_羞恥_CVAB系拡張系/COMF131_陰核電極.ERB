;=============================================================================
;陰核電極
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE131
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:131 > 0
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:Ｃ系装着器具 == 4
	RETURN 1
;Ｃ系拡張コマンドを有効にしてないとダメ
SIF (FLAG:15 & 1) == 0
	RETURN 0
;アイテムを持っていないとダメ
SIF ITEM:陰核電極 == 0
	RETURN 0
;オトコまたはふたなりだとダメ
SIF EXIST_PENIS(TARGET)
	RETURN 0
;他のＣ系装着具使用中は不可
SIF (TEQUIP:Ｃ系装着器具 && TEQUIP:Ｃ系装着器具 != 4) || TEQUIP:コンドーム
	RETURN 0
;機械だとダメ
SIF TALENT:機械
	RETURN 0
;乗馬中はダメ
SIF TEQUIP:三角木馬乗馬中
	RETURN 0
;お風呂場プレイ中、○○風呂入浴中はダメ
SIF TEQUIP:お風呂場プレイ || TEQUIP:特殊風呂入浴中
	RETURN 0
;シャワー中はダメ
SIF TEQUIP:シャワープレイ
	RETURN 0
;オムツプレイ中はダメ
SIF TEQUIP:オムツプレイ
	RETURN 0
;褌着用中の場合はダメ
SIF TEQUIP:コスチュームプレイ == 17
	RETURN 0
;裸エプロン、スク水プレイ中はダメ
SIF TEQUIP:コスチュームプレイ == 1 || TEQUIP:コスチュームプレイ == 2
	RETURN 0
;焦らしプレイ中は不可
SIF TEQUIP:焦らしプレイ
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手調教
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 131) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM131
PRINTL 陰核電極

;戦闘判定
CALL COM_TRY_BATTLE, 131
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 陰核電極
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 80
DOWNBASE:1 += 140

SOURCE:逸脱 = 650

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	SOURCE:快Ｃ = 150
	SOURCE:痛み = 600
	SOURCE:屈従 = 800
ELSEIF ABL:Ｃ感覚 == 1
	SOURCE:快Ｃ = 350
	SOURCE:痛み = 600
	SOURCE:屈従 = 1400
ELSEIF ABL:Ｃ感覚 == 2
	SOURCE:快Ｃ = 600
	SOURCE:痛み = 600
	SOURCE:屈従 = 2300
ELSEIF ABL:Ｃ感覚 == 3
	SOURCE:快Ｃ = 1500
	SOURCE:痛み = 800
	SOURCE:屈従 = 3500
ELSEIF ABL:Ｃ感覚 == 4
	SOURCE:快Ｃ = 2100
	SOURCE:痛み = 1000
	SOURCE:屈従 = 6000
ELSE
	SOURCE:快Ｃ = 3000
	SOURCE:痛み = 1200
	SOURCE:屈従 = 9000
ENDIF

;ABL:従順をみる
IF ABL:従順 == 0
	TIMES SOURCE:快Ｃ , 0.80
ELSEIF ABL:従順 == 1
	TIMES SOURCE:快Ｃ , 0.90
ELSEIF ABL:従順 == 2
	TIMES SOURCE:快Ｃ , 1.00
ELSEIF ABL:従順 == 3
	TIMES SOURCE:快Ｃ , 1.10
ELSEIF ABL:従順 == 4
	TIMES SOURCE:快Ｃ , 1.20
ELSE
	TIMES SOURCE:快Ｃ , 1.30
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES SOURCE:快Ｃ , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES SOURCE:快Ｃ , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES SOURCE:快Ｃ , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES SOURCE:快Ｃ , 1.10
ELSE
	TIMES SOURCE:快Ｃ , 1.20
ENDIF

;Ｃ敏感、鈍感をみる
;快Ｃ自体のチェックは後でまとめてやる
IF TALENT:Ｃ鈍感
	TIMES SOURCE:痛み , 1.50
	TIMES SOURCE:屈従 , 1.50
	TIMES SOURCE:逸脱 , 1.50
ELSEIF TALENT:Ｃ敏感
	TIMES SOURCE:痛み , 0.60
	TIMES SOURCE:屈従 , 0.60
	TIMES SOURCE:逸脱 , 0.60
ENDIF

;コマンド属性：道具(調教者)
TFLAG:98 = 1

;電極の着脱
IF TEQUIP:Ｃ系装着器具 == 4
	TEQUIP:Ｃ系装着器具 = 0
ELSE
	TEQUIP:Ｃ系装着器具 = 4
ENDIF
RETURN 1

;--------------------------------------------------
;陰核電極装着中
;--------------------------------------------------
@EQUIP_COM131
PRINTL ＜陰核電極装着中＞

DOWNBASE:0 += 50
DOWNBASE:1 += 100

LOCAL:2 = 1000

;ABL:Ｃ感覚をみる
IF ABL:Ｃ感覚 == 0
	LOCAL = 250
	LOCAL:1 = 1000
ELSEIF ABL:Ｃ感覚 == 1
	LOCAL = 600
	LOCAL:1 = 2000
ELSEIF ABL:Ｃ感覚 == 2
	LOCAL = 1200
	LOCAL:1 = 3000
ELSEIF ABL:Ｃ感覚 == 3
	LOCAL = 1900
	LOCAL:1 = 5000
ELSEIF ABL:Ｃ感覚 == 4
	LOCAL = 2500
	LOCAL:1 = 8000
ELSE
	LOCAL = 3900
	LOCAL:1 = 12000
ENDIF

;ABL:従順をみる
IF ABL:従順 == 0
	TIMES LOCAL , 0.80
ELSEIF ABL:従順 == 1
	TIMES LOCAL , 0.90
ELSEIF ABL:従順 == 2
	TIMES LOCAL , 1.00
ELSEIF ABL:従順 == 3
	TIMES LOCAL , 1.10
ELSEIF ABL:従順 == 4
	TIMES LOCAL , 1.20
ELSE
	TIMES LOCAL , 1.30
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES LOCAL , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES LOCAL , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES LOCAL , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES LOCAL , 1.10
ELSE
	TIMES LOCAL , 1.20
ENDIF

;Ｃ敏感、鈍感をみる
;快Ｃ自体のチェックは後でまとめてやる
IF TALENT:Ｃ鈍感
	TIMES LOCAL , 1.50
	TIMES LOCAL:1 , 1.50
	TIMES LOCAL:2 , 1.50
ELSEIF TALENT:Ｃ敏感
	TIMES LOCAL , 0.60
	TIMES LOCAL:1 , 0.60
	TIMES LOCAL:2 , 0.60
ENDIF

SOURCE:快Ｃ += LOCAL
SOURCE:屈従 += LOCAL:1
SOURCE:痛み += LOCAL:2

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 1
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	TCVAR:ＢＬ経験 += 1
ENDIF
;触手経験フラグ
SIF TEQUIP:触手調教
	TFLAG:90 += 1
RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
@SYSTXT_TRAIN_MESSAGE_F_COM_131
IF TEQUIP:Ｃ系装着器具 == 4
	IF MARK:反発刻印 > 1 && EQUIP:睡眠薬 == 0 && TFLAG:899 == 0
		PRINTFORML %CALLNAME:PLAYER%が手を伸ばそうとする前に、%CALLNAME:TARGET%は陰核から電極を外して放り投げた…
	ELSE
		PRINTFORML %CALLNAME:PLAYER%は、%CALLNAME:TARGET%の陰核から電極を外してやった…
	ENDIF
ELSE
	IF MARK:反発刻印 > 1 && EQUIP:睡眠薬 == 0 && TFLAG:899 == 0
		PRINTFORML %CALLNAME:PLAYER%は、嫌がる%CALLNAME:TARGET%を無理やり押さえつけ、その\@(TALENT:Ｃ敏感) ? 敏感な # \@陰核に電極を貼り付けてスイッチを入れた…
	ELSE
		PRINTFORML %CALLNAME:PLAYER%は、%CALLNAME:TARGET%の\@(TALENT:Ｃ敏感) ? 敏感な # \@陰核に電極を貼り付けてスイッチを入れた…
	ENDIF
ENDIF
