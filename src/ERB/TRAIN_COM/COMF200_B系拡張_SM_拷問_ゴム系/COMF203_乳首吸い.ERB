;乳首吸い
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE203
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:203 > 0
	RETURN 0
;Ｂ系拡張コマンドを有効にしてないとダメ
SIF (FLAG:15 & 8) == 0
	RETURN 0
;母乳体質だとダメ
SIF TALENT:母乳体質
	RETURN 0
;Ｂ系装着具使用中は不可
SIF TEQUIP:Ｂ系装着器具 || TEQUIP:サラシ
	RETURN 0
;調教者がウェディングドレス・ゴスロリ着用中の場合調教者に技巧4以上必須
SIF (TEQUIP:コスチュームプレイ == 19 || TEQUIP:コスチュームプレイ == 20) && ABL:PLAYER:技巧 < 4
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 203) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM203
PRINTL 乳首吸い

;戦闘判定
CALL COM_TRY_BATTLE, 203
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 乳首吸い
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 5
DOWNBASE:1 += 50

SOURCE:露出 = 100
SOURCE:性行動 = 60
SOURCE:達成感 = 40
SOURCE:不潔 = 20

;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	SOURCE:快Ｂ = 20
	SOURCE:情愛 = 60
ELSEIF ABL:Ｂ感覚 == 1
	SOURCE:快Ｂ = 100
	SOURCE:情愛 = 120
ELSEIF ABL:Ｂ感覚 == 2
	SOURCE:快Ｂ = 500
	SOURCE:情愛 = 180
ELSEIF ABL:Ｂ感覚 == 3
	SOURCE:快Ｂ = 1200
	SOURCE:情愛 = 250
ELSEIF ABL:Ｂ感覚 == 4
	SOURCE:快Ｂ = 1800
	SOURCE:情愛 = 280
ELSE
	SOURCE:快Ｂ = 2600
	SOURCE:情愛 = 300
ENDIF

;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	TIMES SOURCE:情愛 , 0.80
	TIMES SOURCE:性行動 , 0.80
	TIMES SOURCE:不潔 , 1.20
	TIMES SOURCE:快Ｂ , 0.80
ELSEIF ABL:奉仕精神 == 1
	TIMES SOURCE:性行動 , 1.00
	TIMES SOURCE:達成感 , 1.00
	TIMES SOURCE:不潔 , 1.00
	TIMES SOURCE:快Ｂ , 1.00
ELSEIF ABL:奉仕精神 == 2
	TIMES SOURCE:性行動 , 1.00
	TIMES SOURCE:達成感 , 1.00
	TIMES SOURCE:不潔 , 0.80
	TIMES SOURCE:快Ｂ , 1.00
ELSEIF ABL:奉仕精神 == 3
	TIMES SOURCE:性行動 , 1.20
	TIMES SOURCE:達成感 , 1.20
	TIMES SOURCE:不潔 , 0.80
	TIMES SOURCE:快Ｂ , 1.20
ELSEIF ABL:奉仕精神 == 4
	TIMES SOURCE:性行動 , 1.20
	TIMES SOURCE:達成感 , 1.20
	TIMES SOURCE:不潔 , 0.60
	TIMES SOURCE:快Ｂ , 1.20
ELSE
	TIMES SOURCE:性行動 , 1.40
	TIMES SOURCE:達成感 , 1.40
	TIMES SOURCE:不潔 , 0.40
	TIMES SOURCE:快Ｂ , 1.40
ENDIF

;淫乳
IF TALENT:淫乳
	TIMES SOURCE:情愛 , 1.40
	TIMES SOURCE:不潔 , 0.80
	TIMES SOURCE:快Ｂ , 1.40
ENDIF

;調教者のTALENT:舌使いをみる
IF TALENT:PLAYER:舌使い
	TIMES SOURCE:快Ｂ , 1.40
ENDIF
;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:快Ｂ , 0.70
;調教者が［幼児］、［幼稚］
IF TALENT:PLAYER:幼児 || TALENT:PLAYER:幼稚
	TIMES SOURCE:快Ｂ , 1.20
	TIMES SOURCE:情愛 , 1.20
ENDIF
;調教者が［幼児退行］
SIF TALENT:PLAYER:幼児退行
	TIMES SOURCE:情愛 , 1.20

;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:胸 |= STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:胸

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 5
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	TCVAR:ＢＬ経験 += 5
ENDIF

;触手調教やＢ感覚4未満、[母乳体質]、[オトコ]、[小人体型]、[小柄体型]、[貧乳]、[絶壁]持ちでは発生しない。
