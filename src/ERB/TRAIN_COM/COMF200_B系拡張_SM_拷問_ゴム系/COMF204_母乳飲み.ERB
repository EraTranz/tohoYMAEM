;=============================================================================
;母乳飲み
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE204
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:204 > 0
	RETURN 0
;Ｂ系拡張コマンドを有効にしてないとダメ
SIF (FLAG:15 & 8) == 0
	RETURN 0
;母乳体質じゃなきゃダメ
SIF TALENT:母乳体質 == 0
	RETURN 0
;Ｂ系装着具使用中は不可
SIF TEQUIP:Ｂ系装着器具 || TEQUIP:サラシ
	RETURN 0
;調教者がウェディングドレス・ゴスロリ着用中の場合調教者に技巧4以上必須
SIF (TEQUIP:コスチュームプレイ == 19 || TEQUIP:コスチュームプレイ == 20) && ABL:PLAYER:技巧 < 4
	RETURN 0
;縄使用中は不可
SIF TEQUIP:緊縛関連
	RETURN 0
;焦らしプレイ中は不可
SIF TEQUIP:焦らしプレイ
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手調教
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 204) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM204
PRINTL 母乳飲み

;戦闘判定
CALL COM_TRY_BATTLE, 204
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 母乳飲み
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 10
DOWNBASE:1 += 100

SOURCE:露出 = 100
SOURCE:性行動 = 60
SOURCE:達成感 = 40

;ABL:従順をみる
IF ABL:従順 == 0
	SOURCE:不潔 = 300
ELSEIF ABL:従順 == 1
	SOURCE:不潔 = 200
ELSEIF ABL:従順 == 2
	SOURCE:不潔 = 150
ELSEIF ABL:従順 == 3
	SOURCE:不潔 = 100
ELSEIF ABL:従順 == 4
	SOURCE:達成感 += 20
	SOURCE:不潔 = 50
ELSE
	SOURCE:達成感 += 100
ENDIF

;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	SOURCE:快Ｂ = 20
	SOURCE:情愛 = 150
ELSEIF ABL:Ｂ感覚 == 1
	SOURCE:快Ｂ = 100
	SOURCE:情愛 = 300
ELSEIF ABL:Ｂ感覚 == 2
	SOURCE:快Ｂ = 500
	SOURCE:情愛 = 480
ELSEIF ABL:Ｂ感覚 == 3
	SOURCE:快Ｂ = 1200
	SOURCE:情愛 = 600
ELSEIF ABL:Ｂ感覚 == 4
	SOURCE:快Ｂ = 2000
	SOURCE:情愛 = 800
ELSE
	SOURCE:快Ｂ = 2800
	SOURCE:情愛 = 1000
ENDIF

;ABL:奉仕精神をみる
IF ABL:奉仕精神 == 0
	TIMES SOURCE:情愛 , 0.60
	TIMES SOURCE:性行動 , 0.60
	TIMES SOURCE:不潔 , 1.40
	TIMES SOURCE:快Ｂ , 0.60
ELSEIF ABL:奉仕精神 == 1
	TIMES SOURCE:情愛 , 1.00
	TIMES SOURCE:性行動 , 1.00
	TIMES SOURCE:不潔 , 1.00
	TIMES SOURCE:快Ｂ , 1.00
ELSEIF ABL:奉仕精神 == 2
	TIMES SOURCE:情愛 , 1.20
	TIMES SOURCE:性行動 , 1.20
	TIMES SOURCE:不潔 , 0.80
	TIMES SOURCE:快Ｂ , 1.20
ELSEIF ABL:奉仕精神 == 3
	TIMES SOURCE:情愛 , 1.40
	TIMES SOURCE:性行動 , 1.40
	TIMES SOURCE:不潔 , 0.60
	TIMES SOURCE:快Ｂ , 1.40
ELSEIF ABL:奉仕精神 == 4
	TIMES SOURCE:情愛 , 1.60
	TIMES SOURCE:性行動 , 1.60
	TIMES SOURCE:不潔 , 0.60
	TIMES SOURCE:快Ｂ , 1.60
ELSE
	TIMES SOURCE:情愛 , 1.60
	TIMES SOURCE:性行動 , 1.60
	TIMES SOURCE:不潔 , 0.40
	TIMES SOURCE:快Ｂ , 1.60
ENDIF
IF TALENT:母乳体質
	;ABL:噴乳中毒をみる
	IF ABL:噴乳中毒 == 0
		TIMES SOURCE:快Ｂ , 1.00
		TIMES SOURCE:情愛 , 1.00
	ELSEIF ABL:噴乳中毒 == 1
		TIMES SOURCE:快Ｂ , 1.20
		TIMES SOURCE:情愛 , 1.20
	ELSEIF ABL:噴乳中毒 == 2
		TIMES SOURCE:快Ｂ , 1.40
		TIMES SOURCE:情愛 , 1.40
	ELSEIF ABL:噴乳中毒 == 3
		TIMES SOURCE:快Ｂ , 1.50
		TIMES SOURCE:情愛 , 1.50
	ELSEIF ABL:噴乳中毒 == 4
		TIMES SOURCE:快Ｂ , 1.60
		TIMES SOURCE:情愛 , 1.60
	ELSE
		TIMES SOURCE:快Ｂ , 1.80
		TIMES SOURCE:情愛 , 1.80
	ENDIF
ENDIF

;TALENT:恋慕を見る
IF TALENT:恋慕
	TIMES SOURCE:情愛 , 1.60
	TIMES SOURCE:性行動 , 1.60
	TIMES SOURCE:不潔 , 0.40
	TIMES SOURCE:快Ｂ , 1.60
ELSE
	TIMES SOURCE:情愛 , 0.60
	TIMES SOURCE:性行動 , 0.60
	TIMES SOURCE:不潔 , 1.60
	TIMES SOURCE:快Ｂ , 0.60
ENDIF

;淫乳
IF TALENT:淫乳
	TIMES SOURCE:情愛 , 1.40
	TIMES SOURCE:性行動 , 1.40
	TIMES SOURCE:快Ｂ , 1.40
ENDIF

;調教者のTALENT:舌使いをみる
SIF TALENT:PLAYER:舌使い
	TIMES SOURCE:快Ｂ , 1.40
;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:快Ｂ , 0.90
;調教者が［幼児］、［幼稚］
IF TALENT:PLAYER:幼児 || TALENT:PLAYER:幼稚
	TIMES SOURCE:快Ｂ , 1.40
	TIMES SOURCE:情愛 , 1.40
ENDIF
;調教者が［幼児退行］
SIF TALENT:PLAYER:幼児退行
	TIMES SOURCE:情愛 , 1.20

;調教者が対象の実の子
IF (NO:PLAYER == 2048 || NO:PLAYER == 2049) && (CFLAG:PLAYER:3105 == CFLAG:TARGET:3109 || CFLAG:PLAYER:3107 == CFLAG:TARGET:3109)
	TIMES SOURCE:情愛 , 2.00
	TIMES SOURCE:性行動 , 1.80
	TIMES SOURCE:不潔 , 0.30
	TIMES SOURCE:快Ｂ , 1.70
;調教者が対象の義理の子
ELSEIF (NO:PLAYER == 2048 || NO:PLAYER == 2049) && CFLAG:PLAYER:3106 == CFLAG:TARGET:3109
	TIMES SOURCE:情愛 , 1.60
	TIMES SOURCE:性行動 , 1.60
	TIMES SOURCE:不潔 , 0.40
	TIMES SOURCE:快Ｂ , 1.60
ENDIF

;奴隷のＢ⇔調教者の口の汚れが移動
STAIN:胸 |= STAIN:PLAYER:口
STAIN:PLAYER:口 |= STAIN:胸

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 5
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	TCVAR:ＢＬ経験 += 5
ENDIF
RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
@SYSTXT_TRAIN_MESSAGE_F_COM_204
PRINTFORM %CALLNAME:TARGET%の
IF TALENT:小柄体型 && TALENT:貧乳
	PRINT 僅かに膨らみが感じられる程度の
ELSEIF TALENT:貧乳
	PRINT 標準よりやや小さめの
ELSEIF TALENT:巨乳
	PRINT 手から溢れそうなほどの
ELSEIF TALENT:爆乳
	PRINT 手に余るほど大きな
ENDIF

IF EQUIP:睡眠薬 || TFLAG:899 > 0
	PRINTL 胸の先端を吸いあげ母乳を飲んだ…
ELSE
	IF PALAM:欲情 > PALAMLV:3 && TALENT:恋慕
		PRINTL 胸を絞り込むようにしながらその先端を強く吸い上げると、
		PRINTFORM %CALLNAME:TARGET%は嬌声をあげながらも
		IF TALENT:貧乳
			PRINT その控えめな
		ELSEIF TALENT:巨乳
			PRINT その大きな
		ELSEIF TALENT:爆乳
			PRINT その巨大な
		ENDIF
		PRINT 胸
		SIF TALENT:巨乳 || TALENT:爆乳
			PRINT の谷間
		PRINTFORML に%CALLNAME:PLAYER%の頭を寄せ、快感で力が入ってしまうのか強く抱きしめ圧迫した…
	ELSEIF PALAM:欲情 > PALAMLV:3 && TALENT:淫乱
		PRINTL 胸を絞り込むようにしながらその先端を強く吸い上げると、
		PRINTFORM %CALLNAME:TARGET%は嬌声をあげて
		IF TALENT:貧乳
			PRINT その控えめな
		ELSEIF TALENT:巨乳
			PRINT その大きな
		ELSEIF TALENT:爆乳
			PRINT その巨大な
		ENDIF
		PRINTFORML 胸を強調するように突き出し、%CALLNAME:PLAYER%の顔に押し付けた…
	ELSEIF TALENT:恋慕 || ((NO:PLAYER == 2048 || NO:PLAYER == 2049) && (CFLAG:PLAYER:3105 == CFLAG:TARGET:3109 || CFLAG:PLAYER:3106 == CFLAG:TARGET:3109 || CFLAG:PLAYER:3107 == CFLAG:TARGET:3109))
		PRINTL 胸を揉みしだきながらその先端を吸い上げると、
		PRINTFORM %CALLNAME:TARGET%は優しい笑みを浮かべ
		IF TALENT:貧乳
			PRINT その控えめな
		ELSEIF TALENT:巨乳
			PRINT その大きな
		ELSEIF TALENT:爆乳
			PRINT その巨大な
		ENDIF
		PRINT 胸
		SIF TALENT:巨乳 || TALENT:爆乳
			PRINT の谷間
		PRINTFORML に%CALLNAME:PLAYER%の頭を寄せ、優しく抱きしめた…
	ELSE
		PRINTL 胸の先端を吸いあげ母乳を飲んだ…
	ENDIF
ENDIF
