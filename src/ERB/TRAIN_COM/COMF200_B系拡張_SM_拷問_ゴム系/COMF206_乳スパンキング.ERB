;=============================================================================
;乳スパンキング
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE206
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:206 > 0
	RETURN 0
;Ｂ系拡張コマンドを有効にしてないとダメ
SIF (FLAG:15 & 8) == 0
	RETURN 0
;対象の性別が♀限定
SIF COM_ABLE_CHECK_FEMALE(TARGET) == 0
	RETURN 0
;調教者がハードなコマンドをできるかどうか
SIF COM_ABLE_HARDTRAINING(PLAYER, 0) == 0
	RETURN 0
;褌と裸Ｙシャツ以外のコスプレ中はだめ
SIF TEQUIP:コスチュームプレイ > 2 && TEQUIP:コスチュームプレイ != 11 && TEQUIP:コスチュームプレイ != 17
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 206) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM206
PRINTL 乳スパンキング

;戦闘判定
CALL COM_TRY_BATTLE, 206
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 乳スパンキング
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 70
DOWNBASE:1 += 45

SOURCE:露出 = 200
SOURCE:逸脱 = 500

;ABL:Ｂ感覚をみる
IF ABL:Ｂ感覚 == 0
	SOURCE:快Ｂ = 10
ELSEIF ABL:Ｂ感覚 == 1
	SOURCE:快Ｂ = 40
ELSEIF ABL:Ｂ感覚 == 2
	SOURCE:快Ｂ = 300
ELSEIF ABL:Ｂ感覚 == 3
	SOURCE:快Ｂ = 800
ELSEIF ABL:Ｂ感覚 == 4
	SOURCE:快Ｂ = 1700
ELSE
	SOURCE:快Ｂ = 2500
ENDIF

;母乳体質のときは、ABL:噴乳中毒をみる
IF TALENT:母乳体質
	IF ABL:噴乳中毒 == 0
		SOURCE:中毒充足 += 0
		TIMES SOURCE:快Ｂ , 1.00
		TIMES SOURCE:逸脱, 1.00
	ELSEIF ABL:噴乳中毒 == 1
		SOURCE:中毒充足 += 50
		TIMES SOURCE:快Ｂ , 1.05
		TIMES SOURCE:逸脱, 1.10
	ELSEIF ABL:噴乳中毒 == 2
		SOURCE:中毒充足 += 200
		TIMES SOURCE:快Ｂ , 1.10
		TIMES SOURCE:逸脱, 1.20
	ELSEIF ABL:噴乳中毒 == 3
		SOURCE:中毒充足 += 600
		TIMES SOURCE:快Ｂ , 1.20
		TIMES SOURCE:逸脱, 1.30
	ELSEIF ABL:噴乳中毒 == 4
		SOURCE:中毒充足 += 1200
		TIMES SOURCE:快Ｂ , 1.25
		TIMES SOURCE:逸脱, 1.80
	ELSE
		SOURCE:中毒充足 += 2000
		TIMES SOURCE:快Ｂ , 1.50
		TIMES SOURCE:逸脱, 2.50
	ENDIF
ENDIF

;PALAM:苦痛をみる
IF PALAM:苦痛 < PALAMLV:1
	SOURCE:痛み = 250
ELSEIF PALAM:苦痛 < PALAMLV:2
	SOURCE:痛み = 400
ELSEIF PALAM:苦痛 < PALAMLV:3
	SOURCE:痛み = 800
ELSEIF PALAM:苦痛 < PALAMLV:4
	SOURCE:痛み = 1050
ELSE
	SOURCE:痛み = 1200
ENDIF

;奴隷のＢ⇔調教者の指の汚れが移動
STAIN:胸 |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:胸

SIF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 2

;主人経験フラグ
SIF ASSIPLAY == 0 && ABL:マゾっ気 >= 1
	TFLAG:50 += 1
;ＳＭ教育経験フラグ
SIF ASSIPLAY
	TFLAG:55 = 1
RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
@SYSTXT_TRAIN_MESSAGE_F_COM_206
PRINTFORM %CALLNAME:PLAYER%は、%CALLNAME:TARGET%の
IF (TALENT:貧乳 || TALENT:絶壁)
	IF TALENT:貧乳
		PRINT 辛うじて膨らみの確認出来る
	ELSEIF TALENT:絶壁
		PRINT 膨らみがほぼ皆無な平らな
	ENDIF
	PRINTL 胸の頂点を強く爪弾いた…
ELSE
	IF TALENT:巨乳
		PRINT 豊満な乳房を揺らし、
	ELSEIF TALENT:爆乳
		PRINT 豊か過ぎる乳房を跳ね回らせ
	ELSE
		PRINT 乳房を
	ENDIF
	PRINTL 弾くように平手で叩いた…
ENDIF
