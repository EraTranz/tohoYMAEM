;=============================================================================
;昆虫採集セットの薬
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE421
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:421 > 0
	RETURN 0
;キャラ専用コマンドを有効にしてないとダメ
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;調教者が永琳じゃないとダメ
SIF NO:PLAYER != 1029
	RETURN 0
;媚薬、利尿剤、排卵誘発剤、賢者の血全てを最低1つずつ持っていないとダメ
SIF ITEM:媚薬 == 0 || ITEM:利尿剤 == 0 || ITEM:排卵誘発剤 == 0 || ITEM:賢者の血 == 0
	RETURN 0
;体力が1000未満では使用不可
SIF BASE:体力 < 1000 && !(FLAG:16 & 32)
	RETURN 0
;薬毒耐性だとダメ
SIF TALENT:薬毒耐性
	RETURN 0
;睡眠中は不可
SIF EQUIP:睡眠薬
	RETURN 0
;失神中は不可
SIF TFLAG:899 > 0
	RETURN 0
;昆虫採集セットの薬効果発揮中は不可
SIF TEQUIP:昆虫採集セットの薬
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手調教
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 421) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM421
PRINTL 昆虫採集セットの薬

;戦闘判定
CALL COM_TRY_BATTLE, 421
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 昆虫採集セットの薬

LOCAL:1 = RAND:16
TFLAG:99 = LOCAL:1
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 300
DOWNBASE:1 += 300

SOURCE:薬物浸潤 = 3500
SOURCE:逸脱 = 7000
SOURCE:反感追加 = 1500

LOCAL:2 = 1000
LOCAL:3 = 5000

IF LOCAL:1 == 0
	SOURCE:快Ｃ = LOCAL:3
	SIF TALENT:オトコ == 0
		SOURCE:快Ｖ = LOCAL:3
	SOURCE:快Ａ = LOCAL:3
	SOURCE:欲情追加 = LOCAL:3
	SOURCE:露出 = LOCAL:3
	SOURCE:快Ｂ = LOCAL:3
ELSEIF LOCAL:1 >= 1 && LOCAL:1 < 3 && TALENT:オトコ == 0
	IF ABL:Ｖ感覚 <= 2
		SOURCE:快Ｖ = LOCAL:2
		SOURCE:露出 = LOCAL:2
	ELSE
		SOURCE:快Ｖ = LOCAL:3
		SOURCE:露出 = LOCAL:3
	ENDIF
ELSEIF LOCAL:1 >= 3 && LOCAL:1 < 5
	IF ABL:Ａ感覚 <= 2
		SOURCE:快Ａ = LOCAL:2
		SOURCE:露出 = LOCAL:2
	ELSE
		SOURCE:快Ａ = LOCAL:3
		SOURCE:露出 = LOCAL:3
	ENDIF
ELSEIF LOCAL:1 >= 5 && LOCAL:1 < 8
	IF ABL:Ｂ感覚 <= 2
		SOURCE:快Ｂ = LOCAL:2
		SOURCE:露出 = LOCAL:2
	ELSE
		SOURCE:快Ｂ = LOCAL:3
		SOURCE:露出 = LOCAL:3
	ENDIF
ELSEIF LOCAL:1 >= 8 && LOCAL:1 < 11
	IF ABL:Ｃ感覚 <= 2
		SOURCE:快Ｃ = LOCAL:2
		SOURCE:露出 = LOCAL:2
	ELSE
		SOURCE:快Ｃ = LOCAL:3
		SOURCE:露出 = LOCAL:3
	ENDIF
ELSEIF LOCAL:1 == 15 && TALENT:動物耳 == 0
	PRINTFORML %CALLNAME:TARGET%は[動物耳]を得た
	TALENT:動物耳 = 1
ELSE
	SOURCE:欲情追加 = 7000
	PALAM:恐怖 += 4000
ENDIF

;媚薬、利尿剤、排卵誘発剤、賢者の血を1つずつ消費
CALL USE_PLURAL_ITEM, 61, 1
CALL USE_PLURAL_ITEM, 62, 1
CALL USE_PLURAL_ITEM, 64, 1
CALL USE_PLURAL_ITEM, 66, 1

PALAM:恐怖 += 1000
TEQUIP:昆虫採集セットの薬 = 1

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 1
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	TCVAR:ＢＬ経験 += 1
ENDIF

;薬物経験
TCVAR:薬物経験 += 3
RETURN 1

