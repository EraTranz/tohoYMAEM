;=============================================================================
;角愛撫
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE434
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:434 > 0
	RETURN 0
;キャラ専用コマンドを有効にしてないとダメ
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;対象が[鬼]またはハクタク化している[半白澤]でないとダメ
IF TALENT:半白澤 == 0 && TALENT:鬼 == 0
	RETURN 0
ELSEIF TALENT:半白澤 == 1
	RETURN 0
ENDIF
;触手調教中はダメ
SIF TEQUIP:触手調教
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 434) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM434
PRINTL 角愛撫

;戦闘判定
CALL COM_TRY_BATTLE, 434
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 角愛撫
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 15
DOWNBASE:1 += 80

SOURCE:逸脱 = 400

;ABL:欲望をみる
IF ABL:欲望 == 0
	SOURCE:中毒充足 = 50
	SOURCE:屈従 = 50
ELSEIF ABL:欲望 == 1
	SOURCE:中毒充足 = 100
	SOURCE:屈従 = 100
ELSEIF ABL:欲望 == 2
	SOURCE:中毒充足 = 250
	SOURCE:屈従 = 200
ELSEIF ABL:欲望 == 3
	SOURCE:中毒充足 = 500
	SOURCE:屈従 = 400
ELSEIF ABL:欲望 == 4
	SOURCE:中毒充足 = 1000
	SOURCE:屈従 = 800
ELSE
	SOURCE:中毒充足 = 2000
	SOURCE:屈従 = 1600
ENDIF

;ABL:露出癖をみる
IF ABL:露出癖 == 0
	SOURCE:露出 = 50
ELSEIF ABL:露出癖 == 1
	SOURCE:露出 = 100
ELSEIF ABL:露出癖 == 2
	SOURCE:露出 = 200
ELSEIF ABL:露出癖 == 3
	SOURCE:露出 = 600
ELSEIF ABL:露出癖 == 4
	SOURCE:露出 = 1000
ELSE
	SOURCE:露出 = 1500
ENDIF

IF STAIN:PLAYER:口
;主人の口の汚れがあると不潔追加
	SOURCE:不潔 = 300
	;汚臭鈍感
	SIF TALENT:汚臭鈍感
		SOURCE:不潔 /= 4
	;汚臭敏感
	SIF TALENT:汚臭敏感
		SOURCE:不潔 *= 3
ENDIF

IF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
	TCVAR:レズ経験 += 5
ELSEIF TALENT:オトコ && TALENT:PLAYER:オトコ
	TCVAR:ＢＬ経験 += 5
ENDIF
RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
