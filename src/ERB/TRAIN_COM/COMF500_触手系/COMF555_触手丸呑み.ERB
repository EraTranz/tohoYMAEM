;=============================================================================
;触手丸呑み
;=============================================================================
;--------------------------------------------------
;実行判定
;--------------------------------------------------
;＜未実装コマンド＞
@COM_ABLE555
RETURN 0
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:555 > 0
	RETURN 0
;紳士的な触手系コマンドを有効にしてないとダメ
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;アイテム進化の秘法を持っていないとダメ
SIF ITEM:進化の秘法 == 0
	RETURN 0
;触手調教中じゃないとダメ
SIF TEQUIP:触手調教 == 0 && TEQUIP:触手服 == 0
	RETURN 0
;調教者は触手使役LV4以上必要
SIF ABL:PLAYER:触手使役 < 4
	RETURN 0
;調教者がハードなコマンドをできるかどうか
SIF COM_ABLE_HARDTRAINING(PLAYER, 2) == 0
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 555) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM555
PRINTL 触手丸呑み

;戦闘判定
CALL COM_TRY_BATTLE, 555
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 触手丸呑み
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
@SYSTXT_TRAIN_MESSAGE_F_COM_555
