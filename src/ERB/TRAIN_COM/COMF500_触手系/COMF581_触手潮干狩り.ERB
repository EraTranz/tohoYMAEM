ELSEIF ABL:触手中毒 == 1
	TIMES LOCAL:2 , 1.20
	TIMES LOCAL:3 , 0.50
ELSEIF ABL:触手中毒 == 2
	TIMES LOCAL:2 , 1.00
	TIMES LOCAL:3 , 0.80
ELSEIF ABL:触手中毒 == 3
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 1.00
ELSEIF ABL:触手中毒 == 4
	TIMES LOCAL:2 , 0.60
	TIMES LOCAL:3 , 1.50
ELSE
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 2.10
ENDIF

;倒錯的
SIF TALENT:倒錯的
	TIMES LOCAL:2 , 1.20
;小柄体型
SIF TALENT:小柄体型
	TIMES LOCAL:1 , 2.50

LOCAL:4 = (LOCAL:1 + LOCAL:2 + 1000) / 3

;にとりとの相性あるなしで補正が上下
LOCAL = 40
IF RELATION:LOCAL > 0 && RELATION:LOCAL != 100
	LOCAL:1 *= RELATION:LOCAL
	LOCAL:1 /= 100
	LOCAL:2 *= RELATION:LOCAL
	LOCAL:2 /= 100
	LOCAL:3 *= RELATION:LOCAL
	LOCAL:3 /= 100
	;トラウマは強制的に増加
	IF RELATION:LOCAL < 100
		LOCAL:4 *= (200-RELATION:LOCAL)
	ELSE
		LOCAL:4 *= RELATION:LOCAL
	ENDIF
	LOCAL:4 /= 100
ENDIF

SOURCE:痛み += LOCAL:1
SOURCE:中毒充足 += LOCAL:3
SOURCE:トラウマ += LOCAL:4
SOURCE:逸脱 += LOCAL:2

;にとりの性別上、調教対象が♀の時のみレズ経験が入る仕様に
SIF TALENT:オトコ == 0
	TCVAR:レズ経験 += 1

;触手経験フラグ
TFLAG:90 += 1
RETURN 1

;--------------------------------------------------
;調教時メッセージ
;--------------------------------------------------
