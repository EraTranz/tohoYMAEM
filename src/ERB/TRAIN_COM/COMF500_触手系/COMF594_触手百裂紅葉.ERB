;=============================================================================
;触手百裂紅葉
;=============================================================================
;触手生贄を通じて下半身が触手と一体化した静葉を召喚、
;某婦人みたく張り手でお尻に赤と青の紅葉を付けていく……という発狂弾幕的なプレイ
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@COM_ABLE594
;個別設定コマンドフィルタ
SIF DITEMTYPE:999:594 > 0
	RETURN 0
;紳士的な触手系コマンドを有効にしてないとダメ
SIF (FLAG:15 & 4096) == 0
	RETURN 0
;キャラ専用コマンドを有効にしてないとダメ
SIF (FLAG:15 & 16384) == 0
	RETURN 0
;アイテム進化の秘法を持っていないとダメ
SIF ITEM:進化の秘法 == 0
	RETURN 0
;触手調教中じゃないとダメ
SIF TEQUIP:触手調教 == 0
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:キャラ触手 & 128
	RETURN 1
;調教者は触手使役LV3以上必要
SIF ABL:PLAYER:触手使役 < 3
	RETURN 0
;触手が[SHIZUHA触手]を得ていないとダメ
SIF (FLAG:98 & 16384) == 0
	RETURN 0
;静葉を触手生贄に捧げていない(=静葉が何らかの形で存在している)とダメ
SIF (FLAG:97 & 16384) == 0
	RETURN 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 594) == 0
	RETURN 0
RETURN 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM594
PRINTL 触手百裂紅葉

;戦闘判定
CALL COM_TRY_BATTLE, 594
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 触手百裂紅葉
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

DOWNBASE:0 += 20
DOWNBASE:1 += 50

;PALAM:苦痛をみる
IF PALAM:苦痛 < PALAMLV:1
	LOCAL:1 = 50
ELSEIF PALAM:苦痛 < PALAMLV:2
	LOCAL:1 = 100
ELSEIF PALAM:苦痛 < PALAMLV:3
	LOCAL:1 = 200
ELSEIF PALAM:苦痛 < PALAMLV:4
	LOCAL:1 = 400
ELSEIF PALAM:苦痛 < PALAMLV:5
	LOCAL:1 = 600
ELSE
	LOCAL:1 = 800
ENDIF

;ABL:マゾっ気をみる
IF ABL:マゾっ気 == 0
	TIMES LOCAL:1 , 1.80
	LOCAL:2 = 4200
	LOCAL:3 = 0
ELSEIF ABL:マゾっ気 == 1
	TIMES LOCAL:1 , 1.50
	LOCAL:2 = 3600
	LOCAL:3 = 10
ELSEIF ABL:マゾっ気 == 2
	TIMES LOCAL:1 , 1.20
	LOCAL:2 = 2800
	LOCAL:3 = 25
ELSEIF ABL:マゾっ気 == 3
	LOCAL:2 = 2000
	LOCAL:3 = 50
ELSEIF ABL:マゾっ気 == 4
	TIMES LOCAL:1 , 0.80
	LOCAL:2 = 1200
	LOCAL:3 = 75
ELSE
	TIMES LOCAL:1 , 0.60
	LOCAL:2 = 800
	LOCAL:3 = 150
ENDIF

;ABL:触手中毒をみる
IF ABL:触手中毒 == 0
	TIMES LOCAL:2 , 1.50
	TIMES LOCAL:3 , 0.00
ELSEIF ABL:触手中毒 == 1
	TIMES LOCAL:2 , 1.20
	TIMES LOCAL:3 , 0.50
ELSEIF ABL:触手中毒 == 2
	TIMES LOCAL:2 , 1.00
	TIMES LOCAL:3 , 0.80
ELSEIF ABL:触手中毒 == 3
	TIMES LOCAL:2 , 0.80
	TIMES LOCAL:3 , 1.00
ELSEIF ABL:触手中毒 == 4
	TIMES LOCAL:2 , 0.60
	TIMES LOCAL:3 , 1.50
ELSE
	TIMES LOCAL:2 , 0.50
	TIMES LOCAL:3 , 2.10
ENDIF

;倒錯的
SIF TALENT:倒錯的
	TIMES LOCAL:2 , 1.20
;小柄体型
SIF TALENT:小柄体型
	TIMES LOCAL:1 , 2.50

LOCAL:4 = (LOCAL:1 + LOCAL:2 + 1000) / 3

;静葉との相性あるなしで補正が上下
LOCAL:5 = 37
IF RELATION:(LOCAL:5) > 0 && RELATION:(LOCAL:5) != 100
	LOCAL:1 *= RELATION:(LOCAL:5)
	LOCAL:1 /= 100
	LOCAL:2 *= RELATION:(LOCAL:5)
	LOCAL:2 /= 100
	LOCAL:3 *= RELATION:(LOCAL:5)
	LOCAL:3 /= 100
	;トラウマは強制的に増加
	IF RELATION:(LOCAL:5) < 100
		LOCAL:4 *= (200-RELATION:(LOCAL:5))
	ELSE
		LOCAL:4 *= RELATION:(LOCAL:5)
	ENDIF
	LOCAL:4 /= 100
ENDIF

SOURCE:痛み += LOCAL:1
SOURCE:トラウマ += LOCAL:4
SOURCE:羞恥扇情 += LOCAL:3
SOURCE:逸脱 += LOCAL:2

;触手百裂紅葉のON/OFF
IF TEQUIP:キャラ触手 & 128
	TEQUIP:キャラ触手 -= 128
ELSE
	TEQUIP:キャラ触手 |= 128
ENDIF

;コマンド属性：触手
TFLAG:98 = 8
;触手経験フラグ
TFLAG:90 = 0
RETURN 1

