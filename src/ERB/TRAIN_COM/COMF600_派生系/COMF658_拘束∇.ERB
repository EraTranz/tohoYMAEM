;=============================================================================
;拘束∇
;=============================================================================
;別名『高速嬲ら』。縄＋アイマスク＋ボールギャグという三重緊縛の状態で
;人形達がバイブとアナルバイブを同時に突っ込んでピストン運動を繰り広げていくコマンド
;……と勝手に定義
;--------------------------------------------------
;実行判定
;--------------------------------------------------
@EXCOM_ABLE658
#FUNCTION
;キャラ専用コマンドを有効にしてないとダメ
SIF (FLAG:15 & 16384) == 0
	RETURNF 0
;Ｖ調教フィルタがオフになってないとダメ
SIF FLAG:2 & 1
	RETURNF 0
;Ａ調教フィルタがオフになってないとダメ
SIF FLAG:2 & 2
	RETURNF 0
;その調教中に浣腸プレイ＋排泄があった場合、調教者が汚れ無視もしくは汚臭鈍感を持たないなら実行できない
SIF TFLAG:140 & 256 && TALENT:PLAYER:汚臭鈍感 == 0 && TALENT:PLAYER:汚れ無視 == 0
	RETURNF 0
;[処女]のときは、異常系調教フィルタがオフになってないとダメ
SIF FLAG:2 & 4 && TALENT:処女
	RETURNF 0
;調教者がアリスでないとダメ
SIF NO:PLAYER != 1014
	RETURNF 0
;調教者の技巧が4無いとできない
SIF ABL:PLAYER:技巧 < 4
	RETURNF 0
;対象にペニスがあるならダメ
SIF EXIST_BAR(TARGET)
	RETURNF 0
;人形愛撫残り使用可能回数オーバー
SIF TFLAG:141 > 3
	RETURNF 0
;バイブ･アナルバイブを両方持っていないとダメ
SIF (ITEM:バイブ == 0 || ITEM:アナルバイブ == 0)
	RETURNF 0
;縄使用中でないとダメ
SIF TEQUIP:緊縛関連 == 0
	RETURNF 0
;荊・蜘蛛の糸で緊縛中のときはダメ
SIF TEQUIP:緊縛関連 >= 5 && TEQUIP:緊縛関連 <= 7
	RETURNF 0
;アイマスク装着中でないとダメ
SIF TEQUIP:目装着器具 == 0
	RETURNF 0
;ボールギャグ装着中でないとダメ
SIF TEQUIP:口装着器具 == 0
	RETURNF 0
;乗馬中はダメ
SIF TEQUIP:三角木馬乗馬中
	RETURNF 0
;お風呂場プレイ中はプレイマットが無いとダメ
SIF TEQUIP:お風呂場プレイ && ITEM:プレイマット == 0
	RETURNF 0
;シャワー中はダメ
SIF TEQUIP:シャワープレイ
	RETURNF 0
;○○風呂入浴中はダメ
SIF TEQUIP:特殊風呂入浴中
	RETURNF 0
;オムツプレイ中はダメ
SIF TEQUIP:オムツプレイ
	RETURNF 0
;褌着用中の場合はダメ
SIF TEQUIP:コスチュームプレイ == 17
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手調教
	RETURNF 0
;距離のチェック
SIF EQUIP:戦闘中 && COM_ABLE_BATTLE(TARGET, PLAYER, 658) == 0
	RETURNF 0
RETURNF 1

;--------------------------------------------------
;コマンド本体
;--------------------------------------------------
@COM658
PRINTL 拘束∇

;戦闘判定
CALL COM_TRY_BATTLE, 658
;実行できない
SIF RESULT == 1
	RETURN 1

TSTR:0 = 拘束∇
SELECTCOM = 658
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

;Ｖ経験を伴うコマンドのフラグ(処女膜再生対応)
TFLAG:1 = 1

DOWNBASE:0 += 90
DOWNBASE:1 += 180

;ABL:Ｖ感覚をみる
IF ABL:Ｖ感覚 == 0
	SOURCE:快Ｖ = 40
ELSEIF ABL:Ｖ感覚 == 1
	SOURCE:快Ｖ = 120
ELSEIF ABL:Ｖ感覚 == 2
	SOURCE:快Ｖ = 300
ELSEIF ABL:Ｖ感覚 == 3
	SOURCE:快Ｖ = 500
ELSEIF ABL:Ｖ感覚 == 4
	SOURCE:快Ｖ = 800
ELSE
	SOURCE:快Ｖ = 1500
ENDIF

;ABL:Ａ感覚をみる
IF ABL:Ａ感覚 == 0
	SOURCE:快Ａ = 40
	SOURCE:屈従 = 200
ELSEIF ABL:Ａ感覚 == 1
	SOURCE:快Ａ = 120
	SOURCE:屈従 = 600
ELSEIF ABL:Ａ感覚 == 2
	SOURCE:快Ａ = 300
	SOURCE:屈従 = 800
ELSEIF ABL:Ａ感覚 == 3
	SOURCE:快Ａ = 500
	SOURCE:屈従 = 1200
ELSEIF ABL:Ａ感覚 == 4
	SOURCE:快Ａ = 800
	SOURCE:屈従 = 1400
ELSE
	SOURCE:快Ａ = 1400
	SOURCE:屈従 = 1800
ENDIF

;EXP:Ｖ経験をみる
IF EXP:Ｖ経験 < EXPLV:1
	TIMES SOURCE:快Ｖ , 0.20
	SOURCE:痛み = 5500
ELSEIF EXP:Ｖ経験 < EXPLV:2
	TIMES SOURCE:快Ｖ , 0.60
	SOURCE:痛み = 300
ELSEIF EXP:Ｖ経験 < EXPLV:3
	TIMES SOURCE:快Ｖ , 1.00
	SOURCE:痛み = 50
ELSEIF EXP:Ｖ経験 < EXPLV:4
	TIMES SOURCE:快Ｖ , 1.20
	SOURCE:痛み = 10
ELSEIF EXP:Ｖ経験 < EXPLV:5
	TIMES SOURCE:快Ｖ , 1.40
	SOURCE:痛み = 0
ELSE
	TIMES SOURCE:快Ｖ , 1.60
	SOURCE:痛み = 0
ENDIF

;EXP:Ａ経験をみる
IF EXP:Ａ経験 < EXPLV:1
	TIMES SOURCE:快Ａ , 0.50
	SOURCE:痛み += 2000
ELSEIF EXP:Ａ経験 < EXPLV:2
	TIMES SOURCE:快Ａ , 1.00
	SOURCE:痛み += 300
ELSEIF EXP:Ａ経験 < EXPLV:3
	TIMES SOURCE:快Ａ , 1.10
	SOURCE:痛み += 50
ELSEIF EXP:Ａ経験 < EXPLV:4
	TIMES SOURCE:快Ａ , 1.20
	SOURCE:痛み += 10
ELSEIF EXP:Ａ経験 < EXPLV:5
	TIMES SOURCE:快Ａ , 1.40
	SOURCE:痛み += 0
ELSE
	TIMES SOURCE:快Ａ , 1.60
	SOURCE:痛み += 0
ENDIF

;PALAM:潤滑をみる
IF PALAM:潤滑 < PALAMLV:1
	TIMES SOURCE:快Ｖ , 0.10
	TIMES SOURCE:快Ａ , 0.40
	SOURCE:痛み += 1800
	TIMES SOURCE:痛み , 3.00
ELSEIF PALAM:潤滑 < PALAMLV:2
	TIMES SOURCE:快Ｖ , 0.40
	TIMES SOURCE:快Ａ , 0.80
	SOURCE:痛み += 900
	TIMES SOURCE:痛み , 1.00
ELSEIF PALAM:潤滑 < PALAMLV:3
	TIMES SOURCE:快Ｖ , 1.00
	TIMES SOURCE:快Ａ , 1.00
	SOURCE:痛み += 300
	TIMES SOURCE:痛み , 0.50
ELSEIF PALAM:潤滑 < PALAMLV:4
	TIMES SOURCE:快Ｖ , 1.40
	TIMES SOURCE:快Ａ , 1.40
	SOURCE:痛み += 120
	TIMES SOURCE:痛み , 0.20
ELSE
	TIMES SOURCE:快Ｖ , 1.80
	TIMES SOURCE:快Ａ , 1.80
	SOURCE:痛み += 100
	TIMES SOURCE:痛み , 0.10
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	TIMES SOURCE:快Ｖ , 0.80
	TIMES SOURCE:快Ａ , 0.80
ELSEIF PALAM:欲情 < PALAMLV:2
	TIMES SOURCE:快Ｖ , 0.90
	TIMES SOURCE:快Ａ , 0.90
ELSEIF PALAM:欲情 < PALAMLV:3
	TIMES SOURCE:快Ｖ , 1.00
	TIMES SOURCE:快Ａ , 1.00
ELSEIF PALAM:欲情 < PALAMLV:4
	TIMES SOURCE:快Ｖ , 1.10
	TIMES SOURCE:快Ａ , 1.10
ELSE
	TIMES SOURCE:快Ｖ , 1.20
	TIMES SOURCE:快Ａ , 1.20
ENDIF

;ABL:従順をみる
IF ABL:従順 == 0
	TIMES SOURCE:快Ｖ , 0.80
	TIMES SOURCE:快Ａ , 0.80
ELSEIF ABL:従順 == 1
	TIMES SOURCE:快Ｖ , 0.90
	TIMES SOURCE:快Ａ , 0.90
ELSEIF ABL:従順 == 2
	TIMES SOURCE:快Ｖ , 1.00
	TIMES SOURCE:快Ａ , 1.00
ELSEIF ABL:従順 == 3
	TIMES SOURCE:快Ｖ , 1.10
	TIMES SOURCE:快Ａ , 1.10
ELSEIF ABL:従順 == 4
	TIMES SOURCE:快Ｖ , 1.20
	TIMES SOURCE:快Ａ , 1.20
ELSE
	TIMES SOURCE:快Ｖ , 1.30
	TIMES SOURCE:快Ａ , 1.30
ENDIF

;小柄体型
IF TALENT:小柄体型
	TIMES SOURCE:痛み , 2.00
;小人体型
ELSEIF TALENT:小人体型
	TIMES SOURCE:痛み , 3.50
ENDIF
;サドかドＳ
IF TALENT:PLAYER:サド || TALENT:PLAYER:ドＳ
	TIMES SOURCE:快Ｖ , 2.50
	TIMES SOURCE:快Ａ , 2.50
	TIMES SOURCE:痛み , 1.50
ENDIF

TFLAG:141 += 2
TEQUIP:Ｖ系装着器具 = 1
TEQUIP:Ａ系装着器具 = 1
TCVAR:Ｖ経験 += 2
TCVAR:Ａ経験 += 2
IF TALENT:処女 && (CFLAG:21 & 256) == 0
	IF ASSIPLAY && TALENT:PLAYER:オトコ == 0
		LOCAL = 2
	ELSE
		LOCAL = 1
	ENDIF
	TCVAR:異常経験 += LOCAL
	CFLAG:21 |= 256
ENDIF
RETURN 1

